<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.module.usage.view.Usage"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
        <u:Tag class="nrgUsg">
            <u:Tag class="nrgUsg-ttl" text="{comp-i18n-usage>nrgUsgLTtl}" />
                <u:Tag class="nrgUsg-tiers">
                        <u:Tag class="nrgUsg-tier">
                            <um:Button id="idCamToggleBtn-P"
                                press=".toggleTier"
                                text="{comp-i18n-usage>nrgUsgLUsage}"
                                class="nrgUsg-btn-selected"
                                design="None">
                            </um:button>
                        </u:Tag>
                        <u:Tag class="nrgUsg-tier">
                            <um:Button id="idCamToggleBtn-R"
                                press=".toggleTier"
                                text="{comp-i18n-usage>nrgUsgLBilling}"
                                design="None">
                            </um:button>
                        </u:Tag>
                        <u:Tag class="nrgUsg-tier">
                            <um:Button id="idCamToggleBtn-S"
                                press=".toggleTier"
                                text="{comp-i18n-usage>nrgUsgLBillWizard}"
                                design="None">
                            </um:button>
                        </u:Tag>
                        <u:Tag class="nrgUsg-tier">
                            <um:Button id="idCamToggleBtn-F"
                                press=".toggleTier"
                                text="{comp-i18n-usage>nrgUsgLRateHis}"
                                design="None">
                            </um:button>
                        </u:Tag>
                        <u:Tag class="nrgUsg-tier">
                            <um:Button id="idCamToggleBtn-d"
                                press=".toggleTier"
                                text="{comp-i18n-usage>nrgUsgLPreAttri}"
                                design="None">
                            </um:button>
                        </u:Tag>
                    </u:Tag>
                <u:Tag class="nrgUsg-Table">
                    <u:Tag class="nrgUsg-ttl" text="{comp-i18n-usage>nrgUsgLSrvAddTtl}" />
                    <u:Tag class="nrgUsg-Radio">
                        <um:RadioButton id="idnrgUsgRadioweekly" design="Default" class="nrgUsg-RadioLabel" group="nrgUsg" checked="true" enabled="true"/>
                        <um:Label text="Weekly" labelFor="idnrgUsgRadioweekly-intRb" class="nrgUsg-RadioLabel"/>
                        <um:RadioButton id="idnrgUsgRadiodaily" design="Default" class="nrgUsg-RadioLabel" group="nrgUsg" enabled="true"/>
                        <um:Label text="Daily" labelFor="idnrgUsgRadiodaily-intRb" class="nrgUsg-RadioLabel" />
                    </u:Tag>   <br/>
                    <um:Dropdown id="idnrgUsgServiceAdd-DropDown"
                                 select=".onServiceAdd"
                                 placeholder="Select Service Address"
                                 class="nrgUsgDropDown nrgUsg-top">
                        <um:DropdownItem>
                        </um:DropdownItem>
                    </um:Dropdown>
                    <u:Tag class="nrgUsgTable-header nrgUsg-top">
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdDate}" class="nrgUsgTag-hd nrgUsgTable-hd-Dt"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdBillingDays}" class="nrgUsgTag-hd nrgUsgTable-hd-BD"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdReading}" class="nrgUsgTag-hd nrgUsgTable-hd-RD"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdKWh}" class="nrgUsgTag-hd nrgUsgTable-hd-kwh"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdActualEst}" class="nrgUsgTag-hd nrgUsgTable-hd-Ac"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdWeather}" class="nrgUsgTag-hd nrgUsgTable-hd-Wt"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdCDIHDI}" class="nrgUsgTag-hd nrgUsgTable-hd-ch"/>
                        <u:Tag text="{comp-i18n-usage>nrgUsgHdDollar}" class="nrgUsgTag-hd nrgUsgTable-hd-dollar"/>
                    </u:Tag>
                    <u:Tag class="nrgUsgTable-Row" id="idnrgUsgTable-Rows">

                    </u:Tag>
                </u:Tag>
       </u:Tag>
       <u:Tag visible="false">
            <um:Dropdown select=".onServiceAdd"
                                 placeholder="Select Service Address"
                                 class="nrgUsg-top">
                <um:DropdownItem key="{comp-usage>Contract}" class="nrgUsg-DdLItem" id="idnrgUsgServiceAdd-DropDownItem">
                    <u:Tag
                    text="{comp-usage>CA}-{comp-usage>Contract}-{comp-usage>ESID}-{comp-usage>House}-{comp-usage>Street}-{comp-usage>Apt}-{comp-usage>City}-{comp-usage>State}-{comp-usage>ZIP}"/>
                </um:DropdownItem>
            </um:Dropdown>
            <um:Infoline design="None" id="idnrgUsgRow-Infoline">
                <um:headerContent>
                    <u:Tag text="{= (${comp-usage>PeriodBegin} &amp;&amp; ${comp-usage>PeriodEnd}) ? ${path: 'comp-usage>PeriodBegin',
                                                                                                       type: 'sap.ui.model.type.Date',
                                                                                                       formatOptions:{pattern: 'MM/dd/yyyy'}} + '-' + ${path: 'comp-usage>PeriodEnd',
                                                                                                       type: 'sap.ui.model.type.Date',
                                                                                                       formatOptions:{pattern: 'MM/dd/yyyy'}} : '' }"
                           class="nrgUsgTable-Data nrgUsgTable-Data-dt"/>
                    <u:Tag text="{comp-usage>NumOfDays}" class="nrgUsgTable-Data nrgUsgTable-Data-days"/>
                    <um:Button press=".expandInfoline"
                               text="{= ${comp-usage>Reading} ? ${comp-usage>Reading} : 'Reading'}"
                               design="None"
                               class="nrgUsgTable-Data nrgUsgTable-hd-RD"/>
                    <u:Tag text="{comp-usage>KwhUsage}" class="nrgUsgTable-Data nrgUsgTable-Data-kwh"/>
                    <u:Tag text="{comp-usage>ConvText}" class="nrgUsgTable-Data nrgUsgTable-Data-Ac"/>
                    <u:Tag text="Low {comp-usage>LowTemp} High {comp-usage>HighTemp}" class="nrgUsgTable-Data nrgUsgTable-Data-Wt"/>
                    <u:Tag text="{comp-usage>CDI_HDI}" class="nrgUsgTable-Data nrgUsgTable-Data-ch"/>
                    <u:Tag text="{comp-usage>CurrentCharges}" class="nrgUsgTable-Data nrgUsgTable-Data-dollar"/>
                </um:headerContent>
                <um:content>
                    <u:Tag class="nrgUsgTable-inside">

                    </u:Tag>
                </um:content>
            </um:Infoline>
                    <u:Tag id="idnrgUsgTable-insideTmpl">
                    <u:Tag text="{= (${comp-usage>PeriodBegin} &amp;&amp; ${comp-usage>PeriodEnd}) ? ${path: 'comp-usage>PeriodBegin',
                                                                                                       type: 'sap.ui.model.type.Date',
                                                                                                       formatOptions:{pattern: 'MM/dd/yyyy'}} + '-' + ${path: 'comp-usage>PeriodEnd',
                                                                                                       type: 'sap.ui.model.type.Date',
                                                                                                       formatOptions:{pattern: 'MM/dd/yyyy'}} : '' }"
                           class="nrgUsgTable-Data nrgUsgTable-Data-dt"/>
                            <u:Tag text="{comp-usage>NumOfDays}" class="nrgUsgTable-Data nrgUsgTable-Data-days"/>
                            <u:Tag text="{= ${comp-usage>Reading} ? ${comp-usage>Reading} : 'Reading'}" class="nrgUsgTable-Data nrgUsgTable-hd-RDInner"/>
                            <u:Tag text="{comp-usage>KwhUsage}" class="nrgUsgTable-Data nrgUsgTable-Data-kwh"/>
                            <u:Tag text="{comp-usage>ConvText}" class="nrgUsgTable-Data nrgUsgTable-Data-Ac"/>
                            <u:Tag text="Low {comp-usage>LowTemp} High {comp-usage>HighTemp}" class="nrgUsgTable-Data nrgUsgTable-Data-Wt"/>
                            <u:Tag text="{comp-usage>CDI_HDI}" class="nrgUsgTable-Data nrgUsgTable-Data-ch"/>
                            <u:Tag text="{comp-usage>CurrentCharges}" class="nrgUsgTable-Data nrgUsgTable-Data-dollar"/>
                    </u:Tag>
           <u:Tag id="idnrgUsgNoData" text="No Data Available" class="nrgUsgNoData"/>
       </u:Tag>

   </u:Tag>
</mvc:View>
