<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          xmlns:m="sap.m"
          xmlns:um="ute.ui.main"
          controllerName="nrg.module.campaign.view.Offers"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
    <u:Tag class="nrgCmpOffT">
         <u:Tag class="nrgCamOffTtlT" text="{comp-i18n-campaign>nrgCmpOffTtl}" />
            <u:Tag class="nrgCmpOffTiers">
                    <u:Tag class="nrgCmpOffTier" text="{comp-i18n-campaign>nrgCmpOffTProactive}" />
                    <u:Tag class="nrgCmpOffTier" text="{comp-i18n-campaign>nrgCmpOffTReactive}" />
                    <u:Tag class="nrgCmpOffTier" text="{comp-i18n-campaign>nrgCmpOffTSave}" />
                    <u:Tag class="nrgCmpOffTier" text="{comp-i18n-campaign>nrgCmpOffTFinalSave}" />
            </u:Tag>
            <u:Tag class="nrgCmpOffTiles">
                    <m:ScrollContainer
                        height="267px"
                        width="100%"
                        horizontal="false"
                        vertical="true"
                        focusable="true"
                        class="nrgCamOffScroll"
                        id="idnrgCamOffScroll"
                        content="{offers-cpg>/}">
                                <um:Button press=".onPressed" text="{offers-cpg>Notitle}" class="nrgCamOffBt" design="None">
                                           <u:Tag class="nrgCamOffBtinfo">
                                                <u:Tag class="nrgCamOffBt-CF" text="{parts:[{path:'offers-cpg>CancellationFee',
                                                                                type: 'nrg.util.type.Price',
                                                                                formatOptions: { currencySymbol: '$', currencyAlignment: 'RHS' }},
                                                                           {path: 'offers-cpg>Incentive',
                                                                                type: 'nrg.util.type.Price',
                                                                                formatOptions: { currencySymbol: '$', currencyAlignment: 'RHS' } }],
                                                                    formatter:'.formatCancelFee'}" />

                                                <u:Tag class="nrgCamOffBt-PC"
                                                       text="{parts:[{path:'offers-cpg>PromoCode'}],
                                                                    formatter:'.formatPromo'}"/>
                                            </u:Tag>
                                        <u:Tag class="nrgCamOffBt-Ttl" text="{offers-cpg>OfferTitle}" />
                                        <u:Tag class="nrgCamOffBt-Prc" text="{path: 'offers-cpg>EFL2000',
                                                                                type: 'nrg.util.type.Price',
                                                                                formatOptions: { currencySymbol: 'Â¢', currencyAlignment: 'RHS' }}" />
                                        <u:Tag class="nrgCamOffBt-PrcLbl" text="{comp-i18n-campaign>nrgCmpOffkWhDisc}" />
                               </um:Button>
                      </m:ScrollContainer>
                </u:Tag>
       </u:Tag>
   </u:Tag>
</mvc:View>
