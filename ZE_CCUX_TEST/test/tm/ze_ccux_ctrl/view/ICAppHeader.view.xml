<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sm="sap.m"
    xmlns:um="ute.ui.main"
    xmlns:uc="ute.ui.commons"
    xmlns:ua="ute.ui.app"
    controllerName="test.tm.ze_ccux_ctrl.view.ICAppHeader"
    height="100%"
    width="100%"
    displayBlock="true">

    <style>
        .nrgAppHMItem-spacer {
            position: relative;
            display: inline-block;
            width: 1px;
            height: 12pt;
            background-color: transparent;
            margin-left: 15px;
            margin-right: 15px;
        }

        .nrgAppHMItem-divider {
            position: relative;
            display: inline-block;
            width: 1px;
            height: 8pt;
            background-color: grey;
            margin-left: 15px;
            margin-right: 15px;
            transform: translateY(-1px);
        }

        .nrgAppHMItem.uteAppHMItem {
            margin-top: 40px;
        }

        .nrgAppHMItem .uteAppHMItem-hdr {
            margin-bottom: 10px;
        }
    </style>

    <ua:App>
        <ua:header>
            <ua:Header id="header">
                <ua:banner>
                </ua:banner>
                <ua:menu>
                    <ua:HeaderMenu class="nrgAppHMItem">
                        <ua:HeaderMenuItem id="menu" class="nrgAppHMItem" press=".onHdrMenuItemPressed">
                            <span>Menu</span>
                            <ua:customData>
                                <core:CustomData key="nrg-type" value="menu"/>
                            </ua:customData>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-divider" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                            <span>Index</span>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-divider" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                                <span>Transactions</span>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-divider" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                            <span>ESID Tool</span>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-divider" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                            <span>PALPlus</span>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-divider" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                            <span>Messages</span>
                            <ua:customData>
                                <core:customData key="nrg-type" value="menu"/>
                            </ua:customData>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-spacer" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                            <core:Icon src="sap-icon://nrg-icon/refresh"></core:Icon>
                        </ua:HeaderMenuItem>
                        <span class="nrgAppHMItem-spacer" />
                        <ua:HeaderMenuItem press=".onHdrMenuItemPressed">
                            <span>Clear Account</span>
                        </ua:HeaderMenuItem>
                    </ua:HeaderMenu>
                </ua:menu>
            </ua:Header>
        </ua:header>
    </ua:App>

</mvc:View>
