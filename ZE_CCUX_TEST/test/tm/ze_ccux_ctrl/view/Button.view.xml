<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sm="sap.m"
    xmlns:um="ute.ui.main"
    controllerName="test.tm.ze_ccux_ctrl.view.Button"
    height="100%"
    width="100%"
    displayBlock="true">

    <sm:ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
        <style>
            .custom {
                background-color: tomato;
                color: gold;
            }

            .custom:hover {
                background-color: gold;
                color: tomato;
            }

            .customBtnClass[data-disabled="true"] .custom {
                background-color: green;
            }
        </style>

        <div>Vanilla button</div>
        <um:Button design="None" text="this is a new button" press=".onPressed" />

        <div>Default button</div>
        <um:Button text="this is a new button" press=".onPressed" />

        <br/><div>Default disabled button</div>
        <um:Button text="this is a new button" press=".onPressed" disabled="true" />

        <br/><div>Button with stuffing</div>
        <um:Button press=".onPressed">
            <div>Another text</div>
            <div>Yet another text</div>
        </um:Button>

        <br/><div>Custom button styling</div>
        <um:Button design="None" class="custom" disabled="true" press=".onPressed">
            <div>haisda</div>
        </um:Button>

        <br/><div>Substyling standard button with stuffing</div>
        <um:Button class="customBtnClass" disabled="true" press=".onPressed">
            <div>haisda</div>
            <div class="custom" >hzzz</div>
        </um:Button>

    </sm:ScrollContainer>
</mvc:View>

