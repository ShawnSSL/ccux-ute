<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sm="sap.m"
    xmlns:um="ute.ui.main"
    controllerName="test.tm.ze_ccux_ctrl.view.TabBar"
    height="100%"
    width="100%"
    displayBlock="true">

    <sm:ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
        <style>

        </style>

        <um:TabBar design="Invert" select=".onSelected">
            <um:TabBarItem design="Invert" key="tb001" press=".onPressed">
                <div>Service Address</div>
            </um:TabBarItem>
            <um:TabBarItem design="Invert" key="tb002" press=".onPressed" selected="true">
                <div>Mailing Address</div>
            </um:TabBarItem>
            <um:TabBarItem design="Invert" key="tb003" press=".onPressed">
                <div>New Address</div>
            </um:TabBarItem>
            <um:TabBarItem design="Invert" key="tb004" press=".onPressed">
                <div>Yet Another Address</div>
            </um:TabBarItem>
        </um:TabBar>

        <br/>

        <um:TabBarItem group="grp001" key="tb001" press=".onPressed">
            <div>Service Address</div>
        </um:TabBarItem>
        <um:TabBarItem group="grp001" key="tb002" press=".onPressed" selected="true">
            <div>Mailing Address</div>
        </um:TabBarItem>
        <um:TabBarItem group="grp001" key="tb003" press=".onPressed">
            <div>New Address</div>
        </um:TabBarItem>
        <um:TabBarItem group="grp001" key="tb004" press=".onPressed">
            <div>Yet Another Address</div>
        </um:TabBarItem>

    </sm:ScrollContainer>
</mvc:View>
