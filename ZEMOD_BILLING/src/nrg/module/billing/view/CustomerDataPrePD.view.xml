<!--Routing Pattern: PrePD-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.commons.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="nrg.module.billing.view.CustomerDataPrePD">

    <ute:Tag class="nrgAppMain-generalContent nrgBilling-cusDataPrePD">
        <ute:Tag elem="div" class="nrgBilling-cusDataBil">
                <ute:Tag elem="span" class="nrgBilling-cusDataBil-scrnTitle" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-ACCOUNT_BALANCE}" />
                <utmain:Button class="nrgBilling-cusDataBil-btn" design="Default"
                   text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-CommPref}"
                   press="._onCommPreferences"/>
                <utmain:Button class="nrgBilling-cusDataBil-btn" design="Default"
                   text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-Alerts}"
                   press="._onAlertInformation"/>
                <utmain:Button class="nrgBilling-cusDataBil-btn" design="Default"
                   text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-Reconnect}"
                   press="._onReconnect"/>
        </ute:Tag>


<!--
        <ute:Tag elem="span" class="nrgBilling-cusDataPrePD-r-btn">
            <utmain:Button design="None" class="nrgBilling-cusDataBil-CommBtn" press="onPayNow">
                <ute:Tag elem="div" class="nrgBilling-cusDataBil-PayBalBtn-text" text="Communication Preferences" />
            </utmain:Button>
        </ute:Tag>
-->

        <l:MatrixLayout
            class="nrgBilling-cusDataPrePD-layout"
            widths="242px,768px" columns="2" width="100%">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:cells>
                        <!--Area Left-->
                        <l:MatrixLayoutCell class="nrgBilling-cusDataPrePD-l">
                            <ute:Tag class="nrgBilling-cusDataPrePD-l-div">
                                <utmain:Button design="None" class="nrgBilling-cusDataBil-PayBalBtn" press="onPayNow">
                                    <!--<ute:Tag elem="div" class="nrgBilling-cusDataBil-PayBalBtn-amount" text="{path: 'comp-feeAdjs>AmountDue', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }" >
                                        <ute:customData>
                                                      <core:CustomData key="mydata" value="{= ${comp-feeAdjs>AmountDue} >= 0 ? 'true' : 'false'}" writeToDom="true" />
                                        </ute:customData>
                                    </ute:Tag>
                                    <ute:Tag elem="div" class="nrgBilling-cusDataBil-PayBalBtn-text" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-PAY_NOW}" />-->
                                    <ute:Tag class="nrgBilling-cusDataBil-PayBalBtn-amount"
                                             text="{path: 'comp-feeAdjs>AmountDue', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }">
                                        <ute:customData>
                                            <core:CustomData key="mydata" value="{= ${comp-feeAdjs>AmountDue} >= 0 ? 'true' : 'false'}" writeToDom="true" />
                                        </ute:customData>
                                    </ute:Tag>
                                    <ute:Tag class="nrgBilling-cusDataBil-PayBalBtn-credit" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-CREDIT}"
                                             visible="{= ${comp-feeAdjs>AmountDue} >= 0 ? true : false }"/>
                                    <ute:Tag class="nrgBilling-cusDataBil-PayBalBtn-debit" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-DEBIT}"
                                             visible="{= ${comp-feeAdjs>AmountDue} >= 0 ? false : true }"/>
                                    <ute:Tag class="nrgBilling-cusDataBil-PayBalBtn-text" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-ON_ACCOUNT}"/>
                                </utmain:Button>

                                <!--<utmain:Label text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-REFER_TO}:" labelFor="referrer"
                                   class="nrgBilling-cusDataBil-referer-lbl"/>
                                <utmain:Dropdown id="referer" design="Default" class="nrgBilling-cusDataBil-referer-dropdown" content="{data>/dropdown}" selectedKey="{data>/selectedKey}" select=".onSelected">
                                    <utmain:DropdownItem key="{data>key}">
                                       <ute:Tag text="{data>value}" />
                                    </utmain:DropdownItem>
                                </utmain:Dropdown>-->
                                <ute:Tag>
                                    <ute:Tag text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-REFER_TO}"
                                             class="nrgBilling-cusDataPrePD-referer-lbl"/>
                                    <utmain:Button class="nrgBilling-cusDataPrePD-referer-linkFirst" design="None"
                                                   text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-CHKBOOK}"
                                                   press="._onChkbookLnkClicked"/>
                                    <utmain:Button class="nrgBilling-cusDataPrePD-referer-linkSecnd" design="None"
                                                   text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-HighBill}"
                                                   press="._onHighbillLnkClicked"/>
                                </ute:Tag>

                                <!--20160707 Add Alerts-->
                                <ute:Tag class="nrgBilling-cusDataBil-msgs" id="idnrgBillingMsgs">

                                </ute:Tag>
                                <ute:Tag visible="false">
                                <c:Label text="{comp-billing>DunningReason}"
                                         id="idnrgBillingMsgsTemp"
                                         icon="sap-icon://nrg-icon/notification"
                                         class="nrgBilling-cusDataBil-msgs-msg" />
                                </ute:Tag>

                                <!--ute:Tag class="nrgBilling-cusDataPrePD-date">
                                    <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-date-label" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-BILLING_DATE}" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-date-value" text="{path: 'comp-feeAdjs>BillingDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-date-label" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-REMAINING_DAYS}" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-date-value" text="{comp-feeAdjs>DaysRemain}" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-date-label" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-DPP_BALANCE}" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-date-value" text="{path: 'comp-feeAdjs>DPPBalance', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }" />
                                </ute:Tag-->
                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Right-->
                        <l:MatrixLayoutCell class="nrgBilling-cusDataPrePD-r">
                            <ute:Tag class="nrgBilling-cusDataPrePD-r-div">

                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-text-amntexpln" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-AMNT_EXP}" />

                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-text-autopayinfo" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-THRESHOLD_INFO}" />

                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-matrix">
                                    <l:MatrixLayout widths="50%,50%" width="25rem" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-AVG_DAILY_USAGE} :" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-cnt" text="{comp-feeAdjs>PayTypeDesc}" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgBilling-cusDataPrePD-horDvi"  width="400px"/>
                                    <l:MatrixLayout widths="50%,50%" width="25rem" columns="2">
                                        <l:MatrixLayoutRow>
                                            <!--<l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl2" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-THRESHOLD_AMNT}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-cnt" text="{path: 'comp-feeAdjs>ThresholdAmt', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }" />
                                            </l:MatrixLayoutCell>-->
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl2" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-NO_DAYS_REM}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-cnt" text="{comp-feeAdjs>DaysRemain}" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgBilling-cusDataPrePD-horDvi"  width="400px"/>
                                    <l:MatrixLayout widths="50%,50%" width="25rem" columns="2">
                                        <l:MatrixLayoutRow>
                                            <!--<l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl2" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-RELOAD_AMNT}:" />
                                            </l:MatrixLayoutCell>-->
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl2" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-ACC_BALANCE}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-cnt" text="{path: 'comp-feeAdjs>AccountBal', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgBilling-cusDataPrePD-horDvi" width="400px"/>
                                    <l:MatrixLayout widths="50%,50%" width="25rem" columns="2">
                                        <l:MatrixLayoutRow>
                                            <!--<l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl3" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-ACCOUNT_BAL}:" />
                                            </l:MatrixLayoutCell>-->
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-lbl3" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-DPP_BALANCE}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgBilling-cusDataPrePD-r-content-cnt3" text="{path: 'comp-feeAdjs>DPPBalance', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }" >
                                                  <!--<ute:customData>
                                                      <core:CustomData key="mydata" value="{= ${comp-feeAdjs>AccountBal} >= 0 ? 'true' : 'false'}" writeToDom="true" />
                                                  </ute:customData>-->
                                                </ute:Tag>
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                </ute:Tag>

                                <ute:HorizontalDivider
                                    class="nrgBilling-cusDataPrePD-horDvi-long"  width="400px"/>

                                <!--<ute:Tag elem="span" class="nrgBilling-cusDataPrePD-btm-label1" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-AVG_DAILY_USAGE}:" />

                                <ute:Tag elem="span" class="nrgBilling-cusDataPrePD-btm-value" text="{path: 'comp-feeAdjs>AvgDailyUsage', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits: '2'} }"/>-->

                                <ute:Tag elem="span" class="nrgBilling-cusDataPrePD-btm-label2" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-AUTO_PAY_DATE} - {comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-START}:" />

                                <ute:Tag elem="span" class="nrgBilling-cusDataPrePD-btm-value" text="{path: 'comp-feeAdjs>AutoPayStartDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />

                                <ute:Tag elem="span" class="nrgBilling-cusDataPrePD-btm-label3" text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-END}:" />

                                <ute:Tag elem="span" class="nrgBilling-cusDataPrePD-btm-value" text="{path: 'comp-feeAdjs>AutoPayEndDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />


                            </ute:Tag>
                            <ute:Tag class="nrgBilling-cusDataPrePD-r-div-right">
                                <ute:Tag class="nrgBilling-cusDataBil-r-div-dunningmsgs" id="idnrgBilDunMsgs">
                                </ute:Tag>
                                <ute:Tag visible="false">
                                    <utmain:Button design="None"
                                               id="idnrgBilDunMsgsTemp"
                                               class="nrgBilling-cusDataBil-r-div-dunningmsgs-msg"
                                               press=".onMessages"
                                               text="{comp-billing>notitle}"
                                               enabled="{comp-billing>EnablePopup}">
<!--                                        <ute:Tag text="{comp-billing>DunningReason}"></ute:Tag>-->
                                        <c:Label text="{comp-billing>DunningReason}"
                                                 icon="sap-icon://nrg-icon/notification"
                                                  class="nrgBilling-cusDataBil-r-div-dunningmsgs-msg-label"/>
                                        <ute:Tag visible="{= ${comp-billing>FilterType} === '1'}"
                                                 class="nrgBilling-cusDataBil-r-div-dunningmsgs-msg-div"
                                                 text="{comp-billing>DunningText}"/>
                                        <ute:Tag visible="{= ${comp-billing>FilterType} === '1'}"
                                                 text="{path: 'comp-billing>DunningDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }"
                                                 class="nrgBilling-cusDataBil-r-div-dunningmsgs-msg-div" />
                                    </utmain:Button>
                                </ute:Tag>
                            </ute:Tag>
                        </l:MatrixLayoutCell>

                    </l:cells>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
    </ute:Tag>

</mvc:View>
