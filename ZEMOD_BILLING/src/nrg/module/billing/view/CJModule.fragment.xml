<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:u="ute.ui.commons"
    xmlns:um="ute.ui.main"
    xmlns:l="sap.ui.commons.layout">
    <u:Tag class="nrgCJModule">
        <u:Tag class="nrgCJModule-selPanel">
            <u:Tag class="nrgCJModule-selPanel-heading">
                <u:Tag text="From" class="nrgCJModule-selPanel-heading-hd"/>
                <u:Tag text="To" class="nrgCJModule-selPanel-heading-hd" />
                <u:Tag text="Channel" class="nrgCJModule-selPanel-heading-hd" />
                <u:Tag text="Search" class="nrgCJModule-selPanel-heading-hd" />
            </u:Tag>
            <u:Tag class="nrgCJModule-selPanel-fields">
                <u:Tag class="nrgCJModule-selPanel-fields-fd">
                    <u:DatePicker width="7rem" />
                </u:Tag>
                <u:Tag class="nrgCJModule-selPanel-fields-fd">
                    <u:DatePicker width="7rem" />
                </u:Tag>
                <um:Dropdown selectedKey="1" class="nrgCJModule-selPanel-fields-fd" placeholder="ALL" >
                    <um:DropdownItem key="1" >
                        <u:Tag text="ALL" />
                    </um:DropdownItem>
                    <um:DropdownItem key="2" >
                        <u:Tag text="WEB" />
                    </um:DropdownItem>
                    <um:DropdownItem key="3">
                        <u:Tag text="CHAT" />
                    </um:DropdownItem>
                    <um:DropdownItem key="4">
                        <u:Tag text="IVR" />
                    </um:DropdownItem>
                    <um:DropdownItem key="5" class="nrgQPCC-DdLItem">
                        <u:Tag text="EMAI" />
                    </um:DropdownItem>
                </um:Dropdown>
                <u:Textfield fieldType="Regular"
                             width="7rem"
                             editable="true"
                             class="nrgCJModule-selPanel-fields-fd" />

            </u:Tag>
        </u:Tag>
        <u:Table width="98%"
             id="idnrgCJModule-table"
             class="nrgCJModule-table"
             tableType="CampaignTable" >
                    <u:columns>
                        <u:TableColumn width="15%" class="nrgCJModule-table-th">
                            <u:Tag text="Date/Time" />
                        </u:TableColumn>
                        <u:TableColumn width="10%" class="nrgCJModule-table-th">
                            <u:Tag text="Channel"/>
                        </u:TableColumn>
                        <u:TableColumn width="75%" class="nrgCJModule-table-th">
                            <u:Tag text="Contact Details" />
                        </u:TableColumn>
                    </u:columns>
        </u:Table>
        <u:Tag visible="false">
            <u:Table>
                <u:rows>
                        <u:TableRow id="idnrgCJModule-RowTempl" class="nrgCJModule-table-Row" >
                            <u:Tag text="{path: 'comp-cj>Date', type: 'sap.ui.model.type.DateTime', formatOptions:{pattern: 'MM/dd/yyyy HH:mm:ss'} }" />
                            <u:Tag text="{comp-cj>ChannelType}" />
                            <um:Infoline design="Default" id="idnrgCJModule-infoline-tmpl" class="nrgCJModule-table-data-Infoline">
                                <um:headerContent>
                                    <u:Tag text="{comp-cj>SingleMessage}" />
                                </um:headerContent>
                                <um:content>
                                    <u:Tag class="nrgCJModule-table-inner">
                                        <u:Table width="auto" tableType="CampaignTable">
                                            <u:columns>
                                                <u:TableColumn width="10%" class="nrgCamPds-th">
                                                   <u:Tag text="CA" class="nrgCJModule-table-innerHeader-hd"></u:Tag>
                                                </u:TableColumn>
                                                <u:TableColumn width="10%" class="nrgCamPds-th">
                                                    <u:Tag text="User" class="nrgCJModule-table-innerHeader-hd"></u:Tag>
                                                </u:TableColumn>
                                                <u:TableColumn width="12%" class="nrgCamPds-th">
                                                    <u:Tag text="Activity(text)" class="nrgCJModule-table-innerHeader-hd"></u:Tag>
                                                </u:TableColumn>
                                                <u:TableColumn width="68%" class="nrgCamPds-th">
                                                    <u:Tag text="Notes" class="nrgCJModule-table-innerHeader-hd"></u:Tag>
                                                </u:TableColumn>
                                            </u:columns>
                                             <u:rows>
                                                <u:TableRow class="nrgCJModule-table--inner-Row">
                                                    <u:Tag text="{comp-cj>CA}"
                                                        class="nrgCJModule-table-Data-row-value"/>
                                                    <u:Tag text="{comp-cj>User}"
                                                        class="nrgCJModule-table-Data-row-value"/>
                                                    <u:Tag text="{comp-cj>Activity}"
                                                        class="nrgCJModule-table-Data-row-value"/>
                                                    <u:Tag text="{comp-cj>Notes}"
                                                        class="nrgCJModule-table-Data-row-value"/>
                                                 </u:TableRow>
                                            </u:rows>
                                        </u:Table>
                                    </u:Tag>
                                </um:content>
                            </um:Infoline>
                        </u:TableRow>
                </u:rows>
            </u:Table>
        </u:Tag>

    </u:Tag>
</core:FragmentDefinition>
