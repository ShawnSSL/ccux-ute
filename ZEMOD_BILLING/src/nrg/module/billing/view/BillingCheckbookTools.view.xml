<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="nrg.module.billing.view.BillingCheckbookTools"
    height="100%"
    width="100%"
    displayBlock="true">

    <ute:Tag class="nrgAppMain-generalContent nrgBilling-blChkBkTools">
        <ute:Tag class="nrgBilling-blChkBkTools-Title"
                 text="{comp-i18n-billing>nrgBilling-chkbkTools-Title}" />
        <ute:Tag class="nrgBilling-blChkBkTools-ctnt">
            <ute:Button class="nrgBilling-blChkBkTools-ctnt-btn"
                buttonType="SpecialNav" width="220px" enabled="true"
                text="{comp-i18n-billing>nrgBilling-chkbkTools-FreeAdj-Btn}">
            </ute:Button>
            <ute:Button class="nrgBilling-blChkBkTools-ctnt-btn"
                buttonType="SpecialNav" width="220px" enabled="true"
                text="{comp-i18n-billing>nrgBilling-chkbkTools-AvgBill-Btn}">
            </ute:Button>
        </ute:Tag>
    </ute:Tag>

</mvc:View>
