<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sm="sap.m"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core">

    <ute:Tag class="nrgBilling-prepayAdj-ctnt">
        <ute:Tag class="nrgBilling-prepayAdj-ctnt-top">
            <ute:Tag class="nrgBilling-prepayAdj-ctnt-top-field">
                <ute:Tag elem="label" for="idAdjInfoInvNum" text="Invoice Number:"/>
                <ute:Tag id="idAdjInfoInvNum" text="{oAdjustmentInfo>/results/0/InvNo}"/>
            </ute:Tag>
            <ute:Tag class="nrgBilling-prepayAdj-ctnt-top-field">
                <ute:Tag elem="label" for="idInvoDateTo" text="Invoice Date To:"/>
                <ute:Tag id="idInvoDateTo"
                         text="{path: 'oAdjustmentInfo>/results/0/InvDtTo', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }"/>
            </ute:Tag>
            <ute:Tag class="nrgBilling-prepayAdj-ctnt-top-field">
                <ute:Tag elem="label" for="idAdjInfoInvNum2" text="Invoice Date From:"/>
                <ute:Tag id="idInvoDateFrom"
                         text="{path: 'oAdjustmentInfo>/results/0/InvDtFr', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }"/>
            </ute:Tag>
        </ute:Tag>
        <ute:Tag class="nrgBilling-prepayAdj-ctnt-mid">
            <ute:Table class="nrgBilling-prepayAdj-ctnt-mid-tbl"
                       tableType="DppTable" width="92%"
                       rows="{oAdjustmentInfo>/results}">
                <ute:columns>
                    <ute:TableColumn>
                        <c:Label text="Item Text"/>
                    </ute:TableColumn>
                    <ute:TableColumn>
                        <c:Label text="SmartStart Daily Charges"/>
                    </ute:TableColumn>
                    <ute:TableColumn>
                        <c:Label text="Invoice Value"/>
                    </ute:TableColumn>
                    <ute:TableColumn>
                        <c:Label text="Difference"/>
                    </ute:TableColumn>
                </ute:columns>
                <ute:rows>
                    <ute:TableRow>
                        <c:Label text="{oAdjustmentInfo>ItmTxt}"/>
                        <c:Label text="{oAdjustmentInfo>SimVal}"/>
                        <c:Label text="{oAdjustmentInfo>InvVal}"/>
                        <c:Label text="{oAdjustmentInfo>DiffVal}" />
                    </ute:TableRow>
                </ute:rows>
            </ute:Table>

        </ute:Tag>
        <ute:Tag class="nrgBilling-prepayAdj-ctnt-btm">
            <ute:Table class="nrgBilling-prepayAdj-ctnt-btm-tbl"
                       tableType="DppTable" width="92%">
                <ute:columns>
                    <ute:TableColumn>
                        <c:Label text="TDSP Non Recurring Charge Detail on Invoice"/>
                    </ute:TableColumn>
                    <ute:TableColumn>
                        <c:Label text="Amount"/>
                    </ute:TableColumn>
                </ute:columns>
                <ute:rows>
                    <ute:TableRow>
                        <c:Label text="Subtotal"/>
                        <c:Label text="{oAdjustmentInfo>/results/subTotal}"/>
                    </ute:TableRow>
                </ute:rows>
            </ute:Table>
        </ute:Tag>
    </ute:Tag>

</core:FragmentDefinition>
