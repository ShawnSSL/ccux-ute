<?xml version="1.0" encoding="UTF-8"?>

<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    controllerName="nrg.module.billing.view.Elig"
    displayBlock="true">

    <ute:Tag class="nrgBilling-eligPopup-content">
        
        <!-- Eligibitlity Criteria Table -->
        <ute:Tag class="nrgBilling-eligPopup-amountDueSec">
            <ute:Tag
                elem="sapn"
                text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-TITLE}"
                class="nrgBilling-eligPopup-amountDue-title"/>

            <ute:Tag class="nrgBilling-eligPopup-amountDue-content">
                <!-- Amount History -->
                <ute:Tag class="nrgBilling-eligPopup-amountDue-history">
                    <ute:Tag class="nrgBilling-eligPopup-amountDue-history-labelSec">
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-monthLabel"
                            text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-history-month-LABEL}"/>
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-usageLabel"
                            text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-history-usage-LABEL}"/>
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-usageChargeLabel"
                            text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-history-usageCharge-LABEL}"/>
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-estLabel"
                            text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-history-est-LABEL}"/>
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-adjLabel"
                            text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-history-adj-LABEL}"/>
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-amtUsedLabel"
                            text="{comp-i18n-billing>nrgBilling-eligPopup-amountDue-history-amtUsed-LABEL}"/>
                    </ute:Tag>
                    <m:ScrollContainer class="nrgBilling-eligPopup-amountDue-history-scrollArea" height="200px" horizontal="false" vertical="true">
                        <ute:Tag content="{oAmountHistory>/}">
                            <ute:Tag class="nrgBilling-eligPopup-amountDue-history-row">
                                <ute:Tag class="nrgBilling-eligPopup-amountDue-history-month"
                                    text="{oAmountHistory>Period}"/>
                                <ute:Tag class="nrgBilling-eligPopup-amountDue-history-usage"
                                    text="{oAmountHistory>Usage}"/>
                                <ute:Tag class="nrgBilling-eligPopup-amountDue-history-usageCharge"
                                    text="{oAmountHistory>ActualBill}"/>
                                <ute:Tag class="nrgBilling-eligPopup-amountDue-history-est"
                                    text="{oAmountHistory>Est}"/>
                                <ute:Textfield class="nrgBilling-eligPopup-amountDue-history-adj"
                                    value="{oAmountHistory>AdjAmount}"
                                    width="60px"/>
                                <ute:Tag class="nrgBilling-eligPopup-amountDue-history-amtUsed"
                                    text="{oAmountHistory>AmtUsdAbp}"/>
                            </ute:Tag>
                        </ute:Tag>
                    </m:ScrollContainer>
                    <!-- Total -->
                    <ute:Tag class="nrgBilling-eligPopup-amountDue-history-row">
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-total"
                            text="TOTAL"/>
                        <ute:Tag class="nrgBilling-eligPopup-amountDue-history-totalAmount"
                            text="{oAmountHistory>/totalAmount}"/>
                    </ute:Tag>
                </ute:Tag>
                
            </ute:Tag>
        </ute:Tag>


    </ute:Tag>

</mvc:View>
