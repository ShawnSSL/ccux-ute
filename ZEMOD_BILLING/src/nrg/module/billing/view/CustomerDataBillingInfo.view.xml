<!--Routing Pattern: BillingInfo-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    controllerName="nrg.module.dashboard.view.CustomerDataBillingInfo">

    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-scrnHeader"
                 text="Deferred Payment Plan Cancelled" />
    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-cusDataBillingInfo">
        <ute:Tag elem="div" class="nrgDashboard-cusDataBil-scrnTitle"
                 text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-l-div-CURRENT_AMNT_DUE}" />

        <l:MatrixLayout
            class="nrgDashboard-cusDataBil-layout"
            widths="242px,384px,384px"
            columns="3"
            width="100%">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:cells>
                        <!--Area Left-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-l">
                            <ute:Tag class="nrgDashboard-cusDataBil-l-div">
                                <utmain:Button design="None"
                                               class="nrgDashboard-cusDataBil-PayBalBtn"
                                               press="onPayNow">
                                    <ute:Tag elem="div"
                                             class="nrgDashboard-cusDataBil-PayBalBtn-amount"
                                             text="$200.00" />
                                    <ute:Tag elem="div"
                                             class="nrgDashboard-cusDataBil-PayBalBtn-text"
                                             text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-PAY_NOW}" />
                                </utmain:Button>

                                <ute:Tag class="nrgDashboard-cusDataBil-date">
                                    <utmain:Label labelFor="idBillDate"
                                                  text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-l-div-BILLING_DATE}"
                                                  class="nrgDashboard-cusDataBil-date-label" />

                                    <ute:Tag id="idBillDate"
                                             elem="span"
                                             class="nrgDashboard-cusDataBil-date-value"
                                             text="10/28/2014" />

                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataBil-horDvi-long"/>

                                    <utmain:Label labelFor="idDueDate"
                                                  text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-l-div-DUE_DATE}"
                                                  class="nrgDashboard-cusDataDue-date-label" />

                                    <ute:Tag id="idDueDate"
                                             elem="span"
                                             class="nrgDashboard-cusDataDue-date-value"
                                             text="11/10/2014" />
                                </ute:Tag>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Middle-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-m">
                            <ute:Tag class="nrgDashboard-cusDataBil-m-div">
                                <ute:Tag elem="div"
                                         class="nrgDashboard-cusDataBil-m-text-amntexpln"
                                         text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-AMNT_EXP}" />

                                <utmain:Label labelFor="idinvoiceAmnt"
                                              text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-m-div-INVOICE_AMNT}"
                                              class="nrgDashboard-cusDataBillingInfo-midlbl" />

                                <utmain:Button id="idinvoiceAmnt"
                                               elem="span"
                                               design="None" visible="true"
                                               press="._onInvoiceAmntClicked"
                                               class="nrgDashboard-cusDataBillingInfo-midamnt"
                                               text="74.02"/>

                                <ute:Tag elem="div"
                                         class="nrgDashboard-cusDataBil-m-text-postinvoice"
                                         text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-m-div-POST_INVOICE}" />

                                <l:MatrixLayout
                                    class="nrgDashboard-cusDataBil-layout"
                                    widths="50%,50%" columns="2" width="100%">
                                    <l:rows>
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div"
                                                         class="nrgDashboard-cusDataBillingInfo-invoicelbl"
                                                         text="Payments" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <utmain:Button
                                                    design="None" visible="true"
                                                    press="._onPaymentsClicked"
                                                    text="74.02"/>
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:rows>
                                </l:MatrixLayout>

                                <utmain:Label labelFor="idTotalAmnt"
                                              class="nrgDashboard-cusDataBil-m-text-totalDue"
                                              text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-m-div-TOTAL_AMNT_DUE}" />
                                <ute:Tag id="idTotalAmnt"
                                         elem="span"
                                         class="nrgDashboard-cusDataBil-m-text-totalamntdue"
                                         text="0.00" />
                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Right-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-r">
                            <ute:Tag class="nrgDashboard-cusDataBil-r-div">
                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-text-disconnect" text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-r-div-DISCON}" />

                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl1" text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-r-div-DISCON_NOTICE_AMNT}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt1" text="$130.00" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-r-div-NET_AMNT}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="$110.00" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-r-div-DUE_DATE}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="11/20/2014" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="{comp-i18n-dashboard>nrgDashboard-cusDataBillingInfo-r-div-DISCONN_DATE}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="01/20/2015" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                    </l:cells>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
    </ute:Tag>

</mvc:View>
