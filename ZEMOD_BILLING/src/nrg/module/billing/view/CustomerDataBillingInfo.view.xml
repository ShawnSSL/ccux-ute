<!--Routing Pattern: BillingInfo-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    controllerName="nrg.module.billing.view.CustomerDataBillingInfo">

    <ute:Tag class="nrgAppMain-generalContent nrgBilling-cusDataBillingInfo">
        <ute:Tag elem="div" class="nrgBilling-cusDataBil-scrnTitle"
                 text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-l-div-CURRENT_AMNT_DUE}" />

        <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-btn">
            <utmain:Button design="None" class="nrgBilling-cusDataBil-CommBtn" press="onFeeAdj">
                <ute:Tag elem="div" class="nrgBilling-cusDataBil-PayBalBtn-text" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-r-div-FEE_ADJ}" />
            </utmain:Button>
        </ute:Tag>

        <l:MatrixLayout
            class="nrgBilling-cusDataBil-layout"
            widths="242px,384px,384px"
            columns="3"
            width="100%">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:cells>
                        <!--Area Left-->
                        <l:MatrixLayoutCell class="nrgBilling-cusDataBil-l">
                            <ute:Tag class="nrgBilling-cusDataBil-l-div">
                                <utmain:Button design="None"
                                               class="nrgBilling-cusDataBil-PayBalBtn"
                                               press="onPayNow">
                                    <ute:Tag elem="div"
                                             class="nrgBilling-cusDataBil-PayBalBtn-amount"
                                             text="$200.00" />
                                    <ute:Tag elem="div"
                                             class="nrgBilling-cusDataBil-PayBalBtn-text"
                                             text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-PAY_NOW}" />
                                </utmain:Button>

                                <utmain:Label text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-l-div-INVOICE} #:" labelFor="invoice"
                                   class="nrgBilling-cusDataBil-invoice-lbl"/>
                                <ute:tag id="invoice" elem="span">
                                    <ute:Tag elem="span" class="nrgBilling-cusDataBil-invoice-id" text="000 000 000 000" />
                                    <core:Icon src="sap-icon://nrg-icon/calendar" class="nrgBilling-cusDataBil-Icon" />
                                </ute:tag>

                                <ute:Tag class="nrgBilling-cusDataBil-date">
                                    <ute:Tag elem="div" class="nrgBilling-cusDataBil-date-label" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-l-div-BILLING_DATE}" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataBil-date-value" text="10/28/2014" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataBil-date-label" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-l-div-DUE_DATE}" />

                                    <ute:Tag elem="div" class="nrgBilling-cusDataBil-date-value" text="11/10/2014" />
                                </ute:Tag>

                                <ute:tag elem="div">
                                    <utmain:Label text="{comp-i18n-billing>nrgBilling-cusDataPrePD-l-div-REFER_TO}:" labelFor="referrer"
                                       class="nrgBilling-cusDataBil-referer-lbl"/>
                                    <utmain:Dropdown id="referer" design="Default" class="nrgBilling-cusDataBil-referer-dropdown" content="{data>/dropdown}" selectedKey="{data>/selectedKey}" select=".onSelected">
                                        <utmain:DropdownItem key="{data>key}">
                                           <ute:Tag text="{data>value}" />
                                        </utmain:DropdownItem>
                                    </utmain:Dropdown>
                                </ute:tag>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Middle-->
                        <l:MatrixLayoutCell class="nrgBilling-cusDataBil-m">
                            <ute:Tag class="nrgBilling-cusDataBil-m-div">
                                <ute:Tag elem="div"
                                         class="nrgBilling-cusDataBil-m-text-amntexpln"
                                         text="{comp-i18n-billing>nrgBilling-cusDataPrePD-r-div-AMNT_EXP}" />

                                <utmain:Label labelFor="idinvoiceAmnt"
                                              text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-m-div-INVOICE_AMNT}"
                                              class="nrgBilling-cusDataBillingInfo-midlbl" />

                                <utmain:Button id="idinvoiceAmnt"
                                               elem="span"
                                               design="None" visible="true"
                                               press="._onInvoiceAmntClicked"
                                               class="nrgBilling-cusDataBillingInfo-midamnt"
                                               text="74.02"/>

                                <ute:Tag elem="div"
                                         class="nrgBilling-cusDataBil-m-text-postinvoice"
                                         text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-m-div-POST_INVOICE}" />

                                <l:MatrixLayout
                                    class="nrgBilling-cusDataBil-invoice-layout"
                                    widths="50%,50%" columns="2" width="100%">
                                    <l:rows>
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div"
                                                         class="nrgBilling-cusDataBillingInfo-invoicelbl"
                                                         text="Payments" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <utmain:Button
                                                    design="None" visible="true"
                                                    press="._onPaymentsClicked"
                                                    class="nrgBilling-cusDataBillingInfo-invoiceBtnValue"
                                                    text="74.02"/>
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:rows>
                                </l:MatrixLayout>

                                <utmain:Label labelFor="idTotalAmnt"
                                              class="nrgBilling-cusDataBil-m-text-totalDue"
                                              text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-m-div-TOTAL_AMNT_DUE}" />
                                <ute:Tag id="idTotalAmnt"
                                         elem="span"
                                         class="nrgBilling-cusDataBil-m-text-totalamntdue"
                                         text="0.00" />
                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Right-->
                        <l:MatrixLayoutCell class="nrgBilling-cusDataBil-r">
                            <ute:Tag class="nrgBilling-cusDataBil-r-div">
                                <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-text-disconnect" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-r-div-DISCON}" />

                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-lbl1" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-r-div-DISCON_NOTICE_AMNT}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-cnt1" text="$130.00" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgBilling-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-lbl" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-r-div-NET_AMNT}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-cnt" text="$110.00" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgBilling-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-lbl" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-r-div-DUE_DATE}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-cnt" text="11/20/2014" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgBilling-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-lbl" text="{comp-i18n-billing>nrgBilling-cusDataBillingInfo-r-div-DISCONN_DATE}:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgBilling-cusDataBil-r-content-cnt" text="01/20/2015" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgBilling-cusDataBil-horDvi"/>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                    </l:cells>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
    </ute:Tag>

</mvc:View>
