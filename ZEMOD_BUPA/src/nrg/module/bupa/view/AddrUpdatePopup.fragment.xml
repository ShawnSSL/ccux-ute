<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">

    <ute:Tag id="idAddrUpdatePopup" class="nrgBupa-cusDataVerifyEditMail nrgBupa-cusDataVerifyEditMail-vl">
        <!-- Warnings -->
        <ute:Tag id="idAddrUpdatePopup-HdrLn" visible="{oDataAddrEdit>/updateSent}"
            class="nrgBupa-cusDataVerifyEditMail-hdr">
            <ute:Tag>
                <core:Icon src="sap-icon://nrg-icon/notification"/>
                <ute:TextView text="{oDataAddrEdit>/SuggAddrInfo/HeaderText1}"/>
            </ute:Tag>
            <ute:Tag>
                <core:Icon src="sap-icon://nrg-icon/notification"/>
                <ute:TextView text="{oDataAddrEdit>/SuggAddrInfo/HeaderText2}"/>
            </ute:Tag>
        </ute:Tag>
        <!-- Address Form - Left -->
        <ute:Tag id="idAddrUpdatePopup-l"
            class="nrgBupa-cusDataVerifyEditMail-l nrgBupa-cusDataVerifyEditMail-l-vl">
            <ute:TextView visible="{oDataAddrEdit>/updateSent}"
                class="nrgBupa-cusDataVerifyEditMail-rl-title"
                text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_lTitle}"/>
            <ute:Tag><ute:Textfield id="idEditPoBox" fieldType="Underlined"
                change="._onPoBoxEdit"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_PoBox}"
                editable="{oDataAddrEdit>/updateNotSent}" width="100px"
                value="{oDataAddrEdit>/AddressInfo/PoBox}"/></ute:Tag>
            <ute:Tag><ute:Textfield id="idEditHouseNum" fieldType="Underlined"
                change="._onRegAddrEdit"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_HuNum}"
                editable="{oDataAddrEdit>/updateNotSent}" width="100px"
                value="{oDataAddrEdit>/AddressInfo/HouseNo}"/></ute:Tag>
            <ute:Tag><ute:Textfield id="idEditUnitNum" fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_UniNum}"
                editable="{oDataAddrEdit>/updateNotSent}" width="100px"
                value="{oDataAddrEdit>/AddressInfo/UnitNo}"/></ute:Tag>
            <ute:Tag><ute:Textfield id="idEditStName" fieldType="Underlined"
                change="._onRegAddrEdit"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_StName}"
                editable="{oDataAddrEdit>/updateNotSent}" width="220px"
                value="{oDataAddrEdit>/AddressInfo/Street}"/></ute:Tag>
            <ute:Tag><ute:Textfield id="idEditCity" fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_City}"
                editable="{oDataAddrEdit>/updateNotSent}" width="100px"
                value="{oDataAddrEdit>/AddressInfo/City}"/></ute:Tag>
            <!--<ute:Tag><ute:Textfield id="idEditState" fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_State}"
                editable="{oDataAddrEdit>/updateNotSent}" width="100px"
                value="{oDataAddrEdit>/AddressInfo/State}"/></ute:Tag>-->
            <ute:Tag>
                <utmain:Label labelFor="idEditState"
                    class="nrgBupa-cusDataVerifyEditMail-l-stateLable"
                    text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_State}:">
                </utmain:Label>
                <utmain:Dropdown id="idEditState"
                    class="nrgBupa-cusDataVerifyEditMail-l-stateDropDown"
                    content="{oUSStateList>/US_State}"
                    selectedKey="{oDataAddrEdit>/AddressInfo/State}"
                    enabled="{oDataAddrEdit>/updateNotSent}">
                    <utmain:DropdownItem key="{oUSStateList>sAbvName}">
                        <ute:Tag elem="span" text="{oUSStateList>sFullName}"/>
                    </utmain:DropdownItem>
                </utmain:Dropdown>
            </ute:Tag>
            <ute:Tag><ute:Textfield id="idEditZip" fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_ZipCode}"
                editable="{oDataAddrEdit>/updateNotSent}" width="100px"
                value="{oDataAddrEdit>/AddressInfo/ZipCode}"/></ute:Tag>

            <ute:Button  id="idEditMailAddr_UpdtBtn"
                visible="{oDataAddrEdit>/updateNotSent}"
                class="nrgBupa-cusDataVerifyEditMailAdd-updtBtn nrgBupa-cusDataVerify-alignCenBtn"
                text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_UpdtBtnText}"
                press="._handleMailingAddrUpdate"/>
        </ute:Tag>
        <!-- Address Form - Right -->
        <ute:Tag id="idAddrUpdatePopup-r"
            class="nrgBupa-cusDataVerifyEditMail-r"
            visible="{oDataAddrEdit>/updateSent}">
            <ute:TextView
                class="nrgBupa-cusDataVerifyEditMail-rl-title"
                text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_rTitle}"/>
            <ute:Tag><ute:Textfield fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_PoBox}"
                editable="false" width="100px"
                value="{oDataAddrEdit>/SuggAddrInfo/PoBox}"/></ute:Tag>
            <ute:Tag><ute:Textfield fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_HuNum}"
                editable="false" width="100px"
                value="{oDataAddrEdit>/SuggAddrInfo/HouseNo}"/></ute:Tag>
            <ute:Tag><ute:Textfield fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_UniNum}"
                editable="false" width="100px"
                value="{oDataAddrEdit>/SuggAddrInfo/UnitNo}"/></ute:Tag>
            <ute:Tag><ute:Textfield fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_StName}"
                editable="false" width="220px"
                value="{oDataAddrEdit>/SuggAddrInfo/Street}"/></ute:Tag>
            <ute:Tag><ute:Textfield fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_City}"
                editable="false" width="100px"
                value="{oDataAddrEdit>/SuggAddrInfo/City}"/></ute:Tag>
            <ute:Tag><ute:Textfield fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_State}"
                editable="false" width="100px"
                value="{oDataAddrEdit>/SuggAddrInfo/State}"/></ute:Tag>
            <ute:Tag><ute:Textfield id="idValdZip" fieldType="Underlined"
                label="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_ZipCode}"
                editable="false" width="100px"
                value="{oDataAddrEdit>/SuggAddrInfo/ZipCode}"/></ute:Tag>
            <ute:Tag id="idAddrUpdatePopup-FtrLn"
                class="nrgBupa-cusDataVerifyEditMail-l-ftr">
                <ute:TextView text="{oDataAddrEdit>/SuggAddrInfo/FooterLine1}"/>
                <ute:TextView text="{oDataAddrEdit>/SuggAddrInfo/FooterLine2}"/>
                <ute:TextView text="{oDataAddrEdit>/SuggAddrInfo/FooterLine3}"/>
            </ute:Tag>
            <!-- Compare Btn -->
            <ute:Tag class="nrgBupa-cusDataVerifyEditMail-r-ChkBx">
                <utmain:Checkbox id="idSuggCompareCheck" select="._compareSuggChkClicked"/>
                <utmain:Label text="Compare"/>
            </ute:Tag>
            <!-- Accept / Decline / Edit -->
            <ute:Button  id="idEditMailAddr_AcptBtn"
                visible="{oDataAddrEdit>/showVldBtns}"
                class="nrgBupa-cusDataVerifyEditMailAdd-valdBtn"
                text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_AcceptBtn}"
                press="._handleMailingAcceptBtn"/>
            <ute:Button  id="idEditMailAddr_DclnBtn"
                visible="{oDataAddrEdit>/showVldBtns}"
                class="nrgBupa-cusDataVerifyEditMailAdd-valdBtn"
                text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_DeclineBtn}"
                press="._handleMailingDeclineBtn"/>
            <ute:Button  id="idEditMailAddr_EditBtn"
                visible="{oDataAddrEdit>/showVldBtns}"
                class="nrgBupa-cusDataVerifyEditMailAdd-valdBtn"
                text="{comp-i18n-bupa>nrgBupaCusDatVrf_Pup_EditBtn}"
                press="._handleMailingEditBtn"/>
        </ute:Tag>
    </ute:Tag>

</core:FragmentDefinition>
