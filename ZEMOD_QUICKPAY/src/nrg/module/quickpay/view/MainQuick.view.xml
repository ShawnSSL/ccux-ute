<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:u="ute.ui.commons"
    xmlns:um="ute.ui.main"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="nrg.module.quickpay.view.MainQuick">
    <u:Tag class="nrgToolsEmpty nrgAppMain-toolsContent nrgAppMain-toolsContent-full">

        <um:TabBar id="nrgTabBar" design="None" class="nrgQPPay-tabBar">
            <um:TabBarItem key="buttons" design="None"  selected="true" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIbuttons" />
            <um:TabBarItem key="StopRec"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIStopRec" />
            <um:TabBarItem key="CC"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBICC" />
            <um:TabBarItem key="BD"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIBD" />
            <um:TabBarItem key="RC"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIRC" />
            <um:TabBarItem key="RD"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIRD" />
            <um:TabBarItem key="AddBD"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIAddBD" />
            <um:TabBarItem key="PaySucc"  design="None" class="nrgQPPay-tabBarItem" id="idnrgQPPay-TBIPaySucc" />
        </um:TabBar>
        <u:Tag class="nrgQPPay-Popup" id="idnrgQPPay-Popup">
            <u:Tag class="nrgQPPay-PopupHdr">
<!--                <um:Button press=".onSettings"
                                         class="nrgQPPay-hdrBtn nrgQPPay-setting"
                                       id="idnrgQPPayBt-settings" design="None">
                    <core:Icon src="sap-icon://nrg-icon/gear" class="nrgQPPay-gear" />
                </um:Button>-->
                <um:Button press=".onPopupClose"
                                         class="nrgQPPay-close"
                                        design="None">
                   <u:Tag class="nrgQPPayBt-close" id="idnrgQPPayBt-close" />

                </um:Button>
            </u:Tag>
            <um:TabPanel tabPanelFor="nrgTabBar" design="None" class="nrgQPPay-tabPanel">
                <um:TabPanelItem key="buttons" class="nrgQPPay-tabPanelItem">
                        <core:Fragment fragmentName="nrg.module.quickpay.view.PaymentMethods" type="XML" />
                </um:TabPanelItem>
                <um:TabPanelItem key="StopRec" class="nrgQPPay-tabPanelItem nrgQPPay-tabIcon">
                    <u:Tag>
                          <um:Button press=".onStopRec"
                                         class="nrgQPPay-stopRec"
                                       id="idnrgQPPayBt-stopRec" design="None">
                             <core:Icon src="sap-icon://nrg-icon/handset" class="nrgQPPay-handset" />
                             <u:Tag text="{comp-i18n-quickpay>nrgQPStopRecording}" class="nrgQPPay-text"/>
                         </um:Button>
                    </u:Tag>
                </um:TabPanelItem>
                <um:TabPanelItem key="CC" class="nrgQPPay-tabPanelItem nrgQPPay-CC">
                        <core:Fragment fragmentName="nrg.module.quickpay.view.Creditcard" type="XML" />
                </um:TabPanelItem>
                <um:TabPanelItem key="BD" class="nrgQPPay-tabPanelItem nrgQPPay-CC">
                        <core:Fragment fragmentName="nrg.module.quickpay.view.BankDraft" type="XML" />
                </um:TabPanelItem>
                <um:TabPanelItem key="RC" class="nrgQPPay-tabPanelItem nrgQPPay-CC">
                        <core:Fragment fragmentName="nrg.module.quickpay.view.Receipt" type="XML" />
                </um:TabPanelItem>
                <um:TabPanelItem key="RD" class="nrgQPPay-tabPanelItem nrgQPPay-CC">
                        <core:Fragment fragmentName="nrg.module.quickpay.view.Redemption" type="XML" />
                </um:TabPanelItem>
                <um:TabPanelItem key="AddBD" class="nrgQPPay-tabPanelItem nrgQPPay-CC">
                        <core:Fragment fragmentName="nrg.module.quickpay.view.AddBankDraft" type="XML" />
                </um:TabPanelItem>
                <um:TabPanelItem key="PaySucc" class="nrgQPPay-tabPanelItem nrgQPPay-tabIcon">
                    <u:Tag>
                          <um:Button press=".onPopupClose"
                                     class="nrgQPPay-stopRec"
                                     design="None">
                             <core:Icon src="sap-icon://nrg-icon/verified" class="nrgQPPay-verified" />
                             <u:Tag text="{comp-i18n-quickpay>nrgQPPaymentAccepted}" class="nrgQPPay-verText"/>
                         </um:Button>
                    </u:Tag>
                </um:TabPanelItem>
            </um:TabPanel>
            <u:Tag  class="nrgQPPay-msgArea" id="idnrgQPPay-msgArea">
                <u:Tag id="idnrgQPPay-msg" class="nrgQPPay-msg" text="Payment System is not Available" />
            </u:Tag>
        </u:Tag>

    </u:Tag>
</mvc:View>
