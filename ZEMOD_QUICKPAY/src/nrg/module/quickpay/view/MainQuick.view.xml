<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:u="ute.ui.commons"
    xmlns:um="ute.ui.main"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="nrg.module.quickpay.view.MainQuick">
    <u:Tag class="nrgToolsEmpty nrgAppMain-toolsContent nrgAppMain-toolsContent-full">
        <u:Tag class="nrgQPPay-root">
            <u:Tag class="nrgQPPay-btns" id="idnrgQPPay-btns" >
                <u:Tag class="nrgQPPay-top nrgQPPay-Reg" >
                    <u:Tag text="{comp-i18n-quickpay>nrgQPPaymentTtl}" class="nrgQPPay-ttl"/>
                    <um:Button press=".onCreditCard"
                               text="{comp-i18n-quickpay>nrgQPPaymentCC}"
                               class="nrgQPPay-btn"
                               id="idnrgQPPayBt-CC" design="Default">
                    </um:Button>
                    <um:Button press=".onBankDraft"
                               text="{comp-i18n-quickpay>nrgQPPaymentBD}"
                               class="nrgQPPay-btn"
                               id="idnrgQPPayBt-BD" design="Default">
                    </um:Button>
                    <um:Button press=".onReceipt"
                               text="{comp-i18n-quickpay>nrgQPPaymentRE}"
                               class="nrgQPPay-btn"
                               id="idnrgQPPayBt-RE" design="Default">
                    </um:Button>
                    <um:Button press=".onReliantCard"
                               text="{comp-i18n-quickpay>nrgQPPaymentRC}"
                               class="nrgQPPay-btn"
                               id="idnrgQPPayBt-RC" design="Default">
                    </um:Button>
                </u:Tag>
                <u:Tag class="nrgQPPay-top">
                        <u:Tag text="Pending Payments" class="nrgQPPay-ttl" />
                        <um:Button press=".onPendingCreditCard"
                               text="{comp-i18n-quickpay>nrgQPPaymentCC}"
                               class="nrgQPPay-btn"
                               id="idnrgQPPayBt-PCC" design="Default">
                    </um:Button>
                        <um:Button press=".onPendingBankDraft"
                               text="{comp-i18n-quickpay>nrgQPPaymentBD}"
                               class="nrgQPPay-btn"
                               id="idnrgQPPayBt-PBD" design="Default">
                    </um:Button>
                </u:Tag>
            </u:Tag>
            <u:Tag class="nrgQPPay-hide" id="idnrgQPPay-StopRec" >
                 <core:Icon src="sap-icon://nrg-icon/agent" class="icon" />
                 <um:Button press=".onStopRec"
                               text="{comp-i18n-quickpay>nrgQPStopRecording}"
                               class="nrgQPPay-stopRec"
                               id="idnrgQPPayBt-stopRec" design="None">
                 </um:Button>
            </u:Tag>
         </u:Tag>
    </u:Tag>
</mvc:View>
