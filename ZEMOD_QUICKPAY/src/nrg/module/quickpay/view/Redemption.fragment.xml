<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
    <u:Tag class="nrgQPCC-root" id="idnrgQPCC-Reliant">
        <u:Tag text="{comp-i18n-quickpay>nrgQPRedemption}" class="nrgQPCC-ttl"/>
        <u:Tag class="nrgQPCC-data">
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <u:Textfield fieldType="Regular"
                                 id="idnrgQPCC-Amt2"
                                 class="nrgQPCC-input"
                                 width="10rem"
                                 editable="false"
                                 value="{comp-quickpay>Amount}"/>
                </u:Tag>
                <u:Tag text="{comp-i18n-quickpay>nrgQPAmount}" class="nrgQPCC-lbl"/>
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <u:Textfield id="idnrgQPCC-RedDate"
                                 editable="false"
                                 fieldType="Regular"
                                 class="nrgQPCC-input"
                                 width="10rem" />
                </u:Tag>
                <u:Tag text="{comp-i18n-quickpay>nrgQPDate}" class="nrgQPCC-lbl"/>
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <u:Textfield placeholder="{comp-i18n-quickpay>nrgQPRedemptionNum}"
                                 change=""
                                 fieldType="Regular"
                                 class="nrgQPCC-input"
                                 width="10rem"
                                 value="{comp-quickpay>ReliantCard}"/>
                </u:Tag>
            </u:Tag>
        </u:Tag>
            <u:Tag class="nrgQPPay-top">
                <u:Tag text="{comp-i18n-quickpay>nrgQPNoProcessingFee}" class="nrgQPCC-Rdmlbl"/>
            </u:Tag>
            <u:Tag class="nrgQPPay-top nrgQPPay-left" >
                <um:Button press=".onAcceptReliant"
                           text="{comp-i18n-quickpay>nrgQPPay}"
                           class="nrgQPCC-btn"
                           design="Default" />
                <um:Button press=".onDeclineReliant"
                           text="{comp-i18n-quickpay>nrgQPCancel}"
                           class="nrgQPCC-btn"
                           design="Default" />
            </u:Tag>
    </u:Tag>
</core:FragmentDefinition>
