<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
    <u:Tag class="nrgQPCC-root">
        <u:Tag text="{comp-i18n-quickpay>nrgQPPendingCreditCard}" class="nrgQPCC-ttl"/>
            <u:Tag class="nrgQP-Table">
                <u:Tag class="nrgQPTable-header nrgQP-top">
                    <u:Tag text="Select" class="nrgQPCC-hd"/>
                    <u:Tag text="{comp-i18n-quickpay>nrgQPTrackingID}" class="nrgQPCC-hd"/>
                    <u:Tag text="{comp-i18n-quickpay>nrgQPCardNumber}" class="nrgQPCC-hd"/>
                    <u:Tag text="{comp-i18n-quickpay>nrgQPExpiryDate}" class="nrgQPCC-hd"/>
                    <u:Tag text="{comp-i18n-quickpay>nrgQPScheduledDate}" class="nrgQPCC-hd"/>
                    <u:Tag text="{comp-i18n-quickpay>nrgQPAmount}" class="nrgQPCC-hd"/>
                    <u:Tag text="{comp-i18n-quickpay>nrgQPCurrentStatus}" class="nrgQPCC-hd"/>
                </u:Tag>
                <u:Tag class="nrgQPTable-Row" id="idnrgQPTable-Row">
                    <u:Tag class="nrgQPTable-Rows" id="idnrgQPTable-Rows">
                        <um:Checkbox id="zzz" select=".onPendingCCSelected" class="nrgQPCC-CheckBox"/>
                        <u:Tag text="{QP-quickpay>CardID}" class="nrgQPCC-Data"/>
                        <u:Tag text="{QP-quickpay>CardNumber}" class="nrgQPCC-Data"/>
                        <u:Tag text="{QP-quickpay>ExpiryDate}" class="nrgQPCC-Data"/>
                        <u:Textfield fieldType="Noborder"
                                     value="{bp>ScheduledDate}"
                                     class="nrgQPCC-Data"
                                     editable="{bp>Editable}"
                                     width="100%" />
                        <u:Textfield fieldType="Noborder"
                                     value="{QP-quickpay>Amount}"
                                     class="nrgQPCC-Data"
                                     editable="{QP-quickpay>Editable}"
                                     width="100%" />
                        <u:Tag text="{QP-quickpay>CurrentStatus}" class="nrgQPCC-Data"/>
                    </u:Tag>
                </u:Tag>
            </u:Tag>
            <u:Tag class="nrgQPPCC-buttons" >
                <um:Button press=".onPendingCCSave"
                           text="{comp-i18n-quickpay>nrgQPSave}"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
                <um:Button press=".onPendingCCCancel"
                           text="{comp-i18n-quickpay>nrgQPCancel}"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
            </u:Tag>
    </u:Tag>
</core:FragmentDefinition>
