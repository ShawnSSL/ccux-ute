<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
<u:Tag class="nrgQPPay-root" visible="{appView>/PM}">
    <u:Tag class="nrgQPPay-btns" id="idnrgQPPay-btns" >
        <u:Tag class="nrgQPPay-Reg" >
            <u:Tag text="{comp-i18n-quickpay>nrgQPPaymentTtl}" class="nrgQPPay-ttl"/>
            <um:Button press=".onCreditCard"
                       text="{comp-i18n-quickpay>nrgQPPaymentCC}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-CC" design="Default"
                       enabled="{= ${comp-quickpay>CCFlag} === 'X'}">
            </um:Button>
            <um:Button press=".onBankDraft"
                       text="{comp-i18n-quickpay>nrgQPPaymentBD}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-BD"
                       design="Default"
                       enabled="{= ${comp-quickpay>BDFlag} === 'X'}">
            </um:Button>
            <um:Button press=".onReceipt"
                       text="{comp-i18n-quickpay>nrgQPPaymentRE}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-RE"
                       design="Default"
                       enabled="{= ${comp-quickpay>ReceiptFlag} === 'X'}">
            </um:Button>
            <um:Button press=".onReliantCard"
                       text="{comp-i18n-quickpay>nrgQPPaymentRC}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-RC"
                       design="Default"
                       enabled="{= ${comp-quickpay>ReliantFlag} === 'X'}">
            </um:Button>
        </u:Tag>
        <u:Tag class="nrgQPPay-Pend">
                <u:Tag text="Pending Payments" class="nrgQPPay-ttl" />
                <um:Button press=".onPendingCreditCard"
                       text="{comp-i18n-quickpay>nrgQPPaymentCC}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-PCC"
                       design="Default"
                       enabled="{= ${comp-quickpay>CCPPFlag} === 'X'}">
            </um:Button>
                <um:Button press=".onPendingBankDraft"
                       text="{comp-i18n-quickpay>nrgQPPaymentBD}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-PBD"
                       design="Default"
                       enabled="{= ${comp-quickpay>BDPPFlag} === 'X'}">

            </um:Button>

<!--Add Auto Bank Draft / Pay Card Option to CCUX BY SHAWN SHAO, July 22, 2016    START -->
        <u:Tag class="nrgQPPay-Pend">
            <u:Tag text="Recurring Payments" class="nrgQPPay-ttl" />
            <um:Button press=".onAutoCreditCard"
                       text="{comp-i18n-quickpay>nrgQPPaymentCC}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-ACC"
                       design="Default"
                       enabled="{= !(${comp-quickpay>NoCreditCardsDes} || ${olocalCorrModel>/isPrePay})}">
                <um:tooltip>
                    <u:Tooltip visible="{= !!(${comp-quickpay>NoCreditCardsDes} || ${olocalCorrModel>/isPrePay}) }">
                        <u:TextView
                            color="White"
                            text="{= ${olocalCorrModel>/isPrePay} ? ${olocalCorrModel>/prePayDes} : ${comp-quickpay>NoCreditCardsDes}}"/>
                    </u:Tooltip>
                </um:tooltip>
            </um:Button>
            <um:Button press=".onAutoBankDraft"
                       text="{comp-i18n-quickpay>nrgQPPaymentBD}"
                       class="nrgQPPay-btn"
                       id="idnrgQPPayBt-ABD"
                       design="Default"
                       enabled="{= !(${comp-quickpay>NoChecksDes} || ${olocalCorrModel>/isPrePay})}">
                <um:tooltip>
                    <u:Tooltip visible="{= !!(${comp-quickpay>NoChecksDes} || ${olocalCorrModel>/isPrePay})}">
                        <u:TextView
                            color="White"
                            text="{= ${olocalCorrModel>/isPrePay}  ? ${olocalCorrModel>/prePayDes} : ${comp-quickpay>NoChecksDes}}"/>
                    </u:Tooltip>
                </um:tooltip>
            </um:Button>
         </u:Tag>
<!--Add Auto Bank Draft / Pay Card Option to CCUX BY SHAWN SHAO, July 22, 2016    STOP -->

        </u:Tag>
    </u:Tag>
</u:Tag>
</core:FragmentDefinition>
