<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
    <u:Tag class="nrgQPCC-root">
        <u:Tag class="nrgQPCC-data">
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Textfield placeholder=""
                             change=""
                             fieldType="Regular"
                             id="idnrgQPCC-Amt"
                             class="nrgQPCC-input"
                             width="12rem">
                        </u:Textfield>
                <c:Label text="Amount"
                         class="nrgQPCC-lbl"
                         labelFor="idnrgQPCC-Amt"  />
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:DatePicker id="idnrgQPCC-DP" width="12rem"></u:DatePicker>
                <c:Label text="Date"
                         class="nrgQPCC-lbl"
                         labelFor="idnrgQPCC-DP"  />
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <um:Dropdown id="idnrgQPCC-DDL"
                             select=".onCreditCardSelected"
                             selectedKey="1"
                             placeholder="Select"
                             class="nrgQPCC-DDL">
                    <um:DropdownItem key="1" class="nrgCamChgRr-DdLItem">
                        <u:Tag>
    <!--                        <core:Icon src="sap-icon://nrg-icon/cc-visa">-->
                            <u:Tag text="6068" />
                        </u:Tag>
                    </um:DropdownItem>
                </um:Dropdown>
                <c:Label text="ADD"
                         class="nrgQPCC-lbl"
                         labelFor="idnrgQPCC-Amt"  />
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Textfield placeholder="CVV"
                             fieldType="Regular"
                             id="idnrgQPCC-cvv"
                             class="nrgQPCC-cvv"
                             width="4rem">
                        </u:Textfield>
                <u:Textfield placeholder="ZIP CODE"
                             fieldType="Regular"
                             id="idnrgQPCC-zipcode"
                             class="nrgQPCC-zipcode"
                             width="6rem">
                        </u:Textfield>
            </u:Tag>
        </u:Tag>
            <u:Tag class="nrgQPPay-top nrgQPPay-btns" >
                <um:Button id="idnrgQPPayBtn-Ok"
                           press=".onAcceptCredit"
                           text="PAY"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
                <um:Button id="idnrgQPPayBtn-Decline"
                           press=".onDeclineCredit"
                           text="CANCEL"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
            </u:Tag>
    </u:Tag>
</core:FragmentDefinition>
