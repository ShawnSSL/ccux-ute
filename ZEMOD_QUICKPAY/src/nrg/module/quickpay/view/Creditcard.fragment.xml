<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
    <u:Tag class="nrgQPCC-root">
        <u:Tag text="CREDIT CARD" class="nrgQPCC-ttl"/>
        <u:Tag class="nrgQPCC-data">
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <u:Textfield placeholder=""
                                 change=""
                                 fieldType="Regular"
                                 id="idnrgQPCC-Amt"
                                 class="nrgQPCC-input"
                                 width="10rem">
                    </u:Textfield>
                </u:Tag>
                <u:Tag text="AMOUNT" class="nrgQPCC-lbl"/>
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <u:DatePicker id="idnrgQPCC-DP" width="10rem" class="nrgQPCC-input"></u:DatePicker>
                </u:Tag>
                <u:Tag text="DATE" class="nrgQPCC-lbl"/>
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <um:Dropdown id="idnrgQPCC-DDL"
                                 placeholder="Select"
                                 class="nrgQPCC-DDL">
                        <um:DropdownItem key="1" class="nrgCamChgRr-DdLItem">
                            <u:Tag class="nrgQPCC-DDI">
        <!--                        <core:Icon src="sap-icon://nrg-icon/cc-visa">-->
                                <u:Tag text="6068" />
                            </u:Tag>
                        </um:DropdownItem>
                    </um:Dropdown>
                </u:Tag>
                <u:Tag text="ADD" class="nrgQPCC-lbl"/>
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Textfield placeholder="CVV"
                             fieldType="Regular"
                             id="idnrgQPCC-cvv"
                             class="nrgQPCC-cvv"
                             width="3rem">
                        </u:Textfield>
                <u:Textfield placeholder="ZIP CODE"
                             fieldType="Regular"
                             id="idnrgQPCC-zipcode"
                             class="nrgQPCC-zipcode"
                             width="5rem">
                        </u:Textfield>
            </u:Tag>
        </u:Tag>
            <u:Tag class="nrgQPPay-top">
                    <um:Dropdown id="idnrgQPCC-WR"
                             placeholder="WAIVE PROCESSING FEE"
                             class="nrgQPCC-DDL">
                    <um:DropdownItem class="nrgCamChgRr-DdLItem">
                        <u:Tag>
                              <u:Tag text="Reason1" />
                        </u:Tag>
                    </um:DropdownItem>
                    <um:DropdownItem class="nrgCamChgRr-DdLItem">
                        <u:Tag>
                              <u:Tag text="Reason2" />
                        </u:Tag>
                    </um:DropdownItem>
                    <um:DropdownItem class="nrgCamChgRr-DdLItem">
                        <u:Tag>
                              <u:Tag text="Reason3" />
                        </u:Tag>
                    </um:DropdownItem>
                </um:Dropdown>
            </u:Tag>
            <u:Tag class="nrgQPPay-top" >
                <um:Button id="idnrgQPPayBtn-Ok"
                           press=".onAcceptCredit"
                           text="PAY"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
                <um:Button id="idnrgQPPayBtn-Decline"
                           press=".onDeclineCredit"
                           text="CANCEL"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
            </u:Tag>
    </u:Tag>
</core:FragmentDefinition>
