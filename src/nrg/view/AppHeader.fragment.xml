<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:core="sap.ui.core">
    
    <ute:Tag elem="nav" id="idAppHdrMenu" class="nrgAppHdrMenu">
        <ute:content>
            <ul>
                <li data-nrg-type="menuitem">
                    <ute:Tag elem="span" class="nrgAppHdrMenuItemDivider" text="{i18n>nrgAppHeaderMenu}" />
                    <section class="nrgAppHdrMenuSub">
                        <article class="nrgAppHdrMenuSubInner">
                            <core:Fragment fragmentName="nrg.view.AppHeaderQuickLink" type="XML" />
                        </article>
                    </section>
                </li>
                <li data-nrg-type="menuitem">
                    <ute:Tag elem="span" class="nrgAppHdrMenuItemDivider" text="{i18n>nrgAppHeaderIdx}" />
                </li>
                <li data-nrg-type="link" data-nrg-href="http://www.nrg.com/">
                    <ute:Tag elem="span" class="nrgAppHdrMenuItemDivider" text="{i18n>nrgAppHeaderTrans}" />
                </li>
                <li data-nrg-type="link" data-nrg-href="http://ccrportal.reliant.com/esiidlookup/esiidlogin.jsp?company=Reliant">
                    <ute:Tag elem="span" class="nrgAppHdrMenuItemDivider" text="{i18n>nrgAppHeaderEsid}" />
                </li>
                <li data-nrg-type="link" data-nrg-href="https://ccpal.nrgenergy.com/ccpal/ssoLogin.do">
                    <ute:Tag elem="span" text="{i18n>nrgAppHeaderPalPlus}" />
                </li>
                <li data-nrg-type="action">
                    <ute:Tag elem="span" text="{i18n>nrgAppHeaderRefresh}" />
                </li>
                <li data-nrg-type="menuitem">
                    <ute:Tag elem="span" text="{i18n>nrgAppHeaderMsg}" />
                    <section class="nrgAppHdrMenuSub">
                        <article class="nrgAppHdrMenuSubInner">
                            <core:Fragment fragmentName="nrg.view.AppHeaderMsg" type="XML" />
                        </article>
                    </section>
                </li>
            </ul>
            <img src="../../asset/img/nrg-logo.svg" />
            <ute:Tag elem="h1" text="{i18n>nrgAppHeaderIc}" />
        </ute:content>
    </ute:Tag>

</core:FragmentDefinition>
