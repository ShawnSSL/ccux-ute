<mvc:View
    controllerName="nrg.controller.App"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:sap="sap.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    
    <header class="nrgAppHeader">
        <core:Fragment fragmentName="nrg.view.AppHeader" type="XML" />
    </header>
    <main class="nrgAppMain">
        <div class="nrgAppTop">
            <span>Page Top</span>
        </div>
        <div class="nrgAppLeft">
            <section class="nrgAppLeftTop">
                <article class="nrgAppLeftTopContent">
                    <ute:Tag id="idInnerPageLeftTopContent" />
                </article>
            </section>
            <section class="nrgAppLeftBottom">
                <article class="nrgAppLeftBottomContent">
                    <ute:Tag id="idInnerPageLeftBottomContent" />
                </article>
            </section>
        </div>
        <div class="nrgAppCenter">
            <section>
                <article class="nrgAppCenterContent">
                    <ute:Tag id="idInnerPageCenterContent" />
                </article>
            </section>
        </div>
    </main>
    <footer class="nrgAppFooter">
        <core:Fragment fragmentName="nrg.view.AppFooter" type="XML" />
    </footer>
</mvc:View>