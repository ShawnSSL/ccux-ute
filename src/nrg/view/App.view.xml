<mvc:View
    controllerName="nrg.view.App"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout">
    
    <header class="uteInnerPageHeader">
        <span>header</span>
    </header>
    <main class="uteInnerPageMain">
        <div class="uteInnerPageTop">
            <span>PAGE TITLE</span>
        </div>
        <div class="uteInnerPageLeft">
            <section class="uteInnerPageLeftTop">
                <article class="uteInnerPageLeftTopContent">
                    <layout:VerticalLayout id="idInnerPageLeftTopContent" width="100%" />
                </article>
            </section>
            <section class="uteInnerPageLeftBottom">
                <article class="uteInnerPageLeftBottomContent">
                    <layout:VerticalLayout id="idInnerPageLeftBottomContent" width="100%" />
                </article>
            </section>
        </div>
        <div class="uteInnerPageCenter">
            <section>
                <article class="uteInnerPageCenterContent">
                    <layout:VerticalLayout id="idInnerPageCenterContent" width="100%" />
                </article>
            </section>
        </div>
    </main>
    <footer class="uteInnerPageFooter">
        <span>footer</span>
    </footer>
</mvc:View>