<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="nrg.controller.App"
    height="100%"
    width="100%"
    displayBlock="true">
    
    <ute:Tag class="nrgApp">
        <ute:content>
            <header class="nrgApp-hdr">
                <core:Fragment fragmentName="nrg.view.AppHeader" type="XML" />
            </header>
            <div class="nrgApp-body">
                <aside class="nrgApp-navLeft">
                    <ute:Tag id="idNrgAppArrowLeft" class="nrgApp-arrowLeft" />
                </aside>
                <main class="nrgApp-main">
                    <core:Fragment fragmentName="nrg.view.AppMain" type="XML" />
                </main>
                <aside class="nrgApp-navRight">
                    <ute:Tag id="idNrgAppArrowRight" class="nrgApp-arrowRight" />
                </aside>
            </div>
            <footer class="nrgApp-ftr">
                <core:Fragment fragmentName="nrg.view.AppFooter" type="XML" />
            </footer>
        </ute:content>
    </ute:Tag>
</mvc:View>
