<mvc:View
    controllerName="nrg.controller.App"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    
    <ute:Tag classes='["nrgApp"]'>
        <ute:content>
            <header>
                <core:Fragment fragmentName="nrg.view.AppHeader" type="XML" />
            </header>
            <main>
                <ute:Tag type="h1" id="idAppTitle" />
                <ute:Tag type="aside" id="idAppCursorLeft" />
                <ute:Tag type="aside" id="idAppCursorRight" />
                <section>
                    <ute:Tag type="article" id="idAppSummary" />
                </section>
                <section>
                    <ute:Tag type="article" id="idAppTools" />
                </section>
                <section>
                    <ute:Tag type="article" id="idAppGeneral" />
                </section>
            </main>
            <footer>
                <core:Fragment fragmentName="nrg.view.AppFooter" type="XML" />
            </footer>
        </ute:content>
    </ute:Tag>
</mvc:View>

