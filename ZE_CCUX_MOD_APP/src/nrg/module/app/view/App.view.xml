<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    controllerName="nrg.module.app.view.App"
    height="100%"
    width="100%"
    displayBlock="true">

    <ute:Tag class="nrgApp">

        <header class="nrgApp-hdr">
            <core:Fragment fragmentName="nrg.module.app.view.AppHeader" type="XML" />
        </header>

        <div class="nrgApp-body nrgU-clearfix">
            <aside class="nrgApp-navLeft nrgU-left">
                <ute:Tag id="idNrgAppArrowLeft" class="nrgApp-arrowLeft" />
            </aside>
            <aside class="nrgApp-navRight nrgU-right">
                <ute:Tag id="idNrgAppArrowRight" class="nrgApp-arrowRight" />
            </aside>
            <main class="nrgApp-main">
                <core:Fragment fragmentName="nrg.module.app.view.AppMain" type="XML" />
            </main>
        </div>

        <footer class="nrgApp-ftr">
            <core:Fragment fragmentName="nrg.module.app.view.AppFooter" type="XML" />
        </footer>

    </ute:Tag>
</mvc:View>
