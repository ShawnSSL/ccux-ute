<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.module.campaign.view.Change"
          height="100%"
          width="100%"
          displayBlock="true"
          busy="{appView>/busy}"
	      busyIndicatorDelay="{appView>/delay}">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamChg">
         <u:Tag class="nrgCamChg-ttl" text="{comp-i18n-campaign>nrgCmpChgTtl}" />
             <um:Button press=".backToOverview"
                        text="{comp-i18n-campaign>nrgCmpBckOverview}"
                        class="nrgCamOff-Back"
                        design="None">
            </um:button>
            <l:MatrixLayout class="nrgCamChg-mtx nrgCamChg-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label text="{comp-i18n-campaign>nrgCmpChgTtllbl}"
                                 icon="sap-icon://nrg-icon/tag"
                                 class="nrgCamChg-lbl"
                                 labelFor="idCamChgTtlTv"  />
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <c:Label text="{comp-i18n-campaign>nrgCmpChgAUlbl}"
                                 icon="sap-icon://nrg-icon/bulb"
                                 class="nrgCamChg-lbl"
                                 labelFor="idCamChgAUTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView text="{comp-campaign>OfferTitle}"
                                    class="nrgCamChg-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <u:TextView text="{comp-campaign>AvgUsage}"
                                    class="nrgCamChg-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamChgPrcT">
                <c:Label id="idCamPrcLbl" text="{comp-i18n-campaign>nrgCmpChgPrcbl}" icon="sap-icon://nrg-icon/dollar" class="nrgCamChg-lbl nrgCamChg-top" labelFor="idCamChgPrcTbl"  />
                <u:Table width="60%"
                         tableType="CampaignTable"
                         class="nrgCamChg-left nrgCamChg-top">
                        <u:columns>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@500"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@1000"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@2000"/>
                            </u:TableColumn>
                        </u:columns>
                        <u:rows>
                            <u:TableRow>
                                <c:Label text="{comp-campaign>EFL500}"/>
                                <c:Label text="{comp-campaign>EFL1000}"/>
                                <c:Label text="{comp-campaign>EFL2000}"/>
                            </u:TableRow>
                        </u:rows>
                </u:Table>
            </u:Tag>
            <um:Infoline expanded="true">
                <um:headerContent>
                    <c:Label id="idCamChgDscLbl"
                        text="{comp-i18n-campaign>nrgCmpChgDscbl}"
                        icon="sap-icon://nrg-icon/description"
                        class="nrgCamChg-lbl"
                        labelFor="idCamDescTv" />
                </um:headerContent>
                <um:content>
                    <u:TextView
                        color="DarkGrey"
                        class="nrgCamChg-left nrgCamChg-top"
                        design="Base"
                        text="{comp-campaign>Description}"/>
                </um:content>
            </um:Infoline>
            <u:Table width="100%"
                     class="nrgCamChg-top"
                     tableType="CampaignTable">
                <u:columns>
                    <u:TableColumn>
                        <c:Label text="Promo Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Offer Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Term Length"/>
                    </u:TableColumn>
                    <u:TableColumn>
                        <c:Label text="Start Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="End Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Cancellation Fee"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Incentive"/>
                    </u:TableColumn>
                </u:columns>
                <u:rows>
                    <u:TableRow>
                        <c:Label text="{comp-campaign>Promo}"/>
                        <c:Label text="{comp-campaign>OfferCode}"/>
                        <c:Label text="{comp-campaign>Term}"/>
                        <c:Label text="{path: 'comp-campaign>StartDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{path: 'comp-campaign>EndDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{comp-campaign>CncFee}"/>
                        <c:Label text="{comp-campaign>Incentive}"/>
                    </u:TableRow>
                </u:rows>
            </u:Table>
            <u:Tag class="nrgCamChg-btnTag nrgCamChg-top" >
                <um:Button id="idnrgCamChgBtn-Ok"
                           press=".onAcceptCampaign"
                           text="{comp-i18n-campaign>nrgCmpChgBtnOk}"
                           class="nrgCamChg-btn"
                           design="Default">
                </um:button>
                <um:Dropdown id="dd001" content="{comp-campaign>/RejectRsnS}" selectedKey="2" select=".onSelected">
                    <um:DropdownItem key="{comp-campaign>RejectionCode}">
                        <u:Tag text="{comp-campaign>Description}" />
                    </um:DropdownItem>
                </um:Dropdown>
<!--                <u:Dropdown
                            id="idnrgCamChgDisRn"
                            class="nrgCamChg-DisRn"
                            arrowcolor="Grey"
                            arrowType="Hollow"
                            enabled="true"
                            title="{comp-i18n-campaign>nrgCmpChgDisResTtl}"
                            background="Transparent"
                            border="Bottom"
                            width="300px"
                            padding="5px"
                            DropdownListItems="{comp-campaign>/RejectRsnS}">
                    <u:DropdownListItems>
                        <u:DropdownListItem key="{comp-campaign>RejectionCode}">
                            <c:Label text="{comp-campaign>Description}"/>
                        </u:DropdownListItem>
                    </u:DropdownListItems>
                </u:Dropdown>-->
            </u:Tag>
      </u:Tag>
   </u:Tag>
</mvc:View>
