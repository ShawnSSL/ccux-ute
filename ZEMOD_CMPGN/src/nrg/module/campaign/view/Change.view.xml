<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.module.campaign.view.Change"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamChgT">
         <u:Tag class="nrgCamChgTtlT" text="{comp-i18n-campaign>nrgCmpChgTtl}" />
            <l:MatrixLayout class="nrgCamChgMtx nrgCamChg-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label id="idCamChgTtlLbl" text="{comp-i18n-campaign>nrgCmpChgTtllbl}" icon="sap-icon://nrg-icon/tag" class="nrgCamChg-lbl"  labelFor="idCamChgTtlTv"  />
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <c:Label id="idCamChgAULbl" text="{comp-i18n-campaign>nrgCmpChgAUlbl}" icon="sap-icon://nrg-icon/bulb" class="nrgCamChg-lbl" labelFor="idCamChgAUTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamChgTtlTv" text="{comp-campaign>OfferTitle}"
                                                    class="nrgCamChg-left"
                                                    color="DarkGrey"
                                                    design="Base"/>
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamChgAUTv"
                                    text="{comp-campaign>AvgUsage}"
                                    class="nrgCamChg-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamChgPrcT">
                <c:Label id="idCamPrcLbl" text="{comp-i18n-campaign>nrgCmpChgPrcbl}" icon="sap-icon://nrg-icon/dollar" class="nrgCamChg-lbl nrgCamChg-top" labelFor="idCamChgPrcTbl"  />
                <u:Table width="60%"
                    id="idCamChgPrcTbl"
                    tableType="CampaignTable"
                    class="nrgCamChg-left nrgCamChg-top">
                        <u:columns>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@500"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@1000"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@2000"/>
                            </u:TableColumn>
                        </u:columns>
                        <u:rows>
                            <u:TableRow>
                                <c:Label text="{comp-campaign>EFL500}"/>
                                <c:Label text="{comp-campaign>EFL1000}"/>
                                <c:Label text="{comp-campaign>EFL2000}"/>
                            </u:TableRow>
                        </u:rows>
                </u:Table>
            </u:Tag>
            <u:Tag class="nrgCamChgDscT">
                    <c:Label id="idCamChgDscLbl"
                        text="{comp-i18n-campaign>nrgCmpChgDscbl}"
                        icon="sap-icon://nrg-icon/description"
                        class="nrgCamChg-lbl nrgCamChg-top nrgCamChg-desc"
                        labelFor="idCamDescTv" />
                    <u:TextView
                        id="idCamChgDscTv"
                        color="DarkGrey"
                        class="nrgCamChg-left nrgCamChg-top"
                        design="Base"
                        text="{comp-campaign>Description}"/>
            </u:Tag>
            <u:Table width="100%"
                     id="idCamChgInfTbl"
                     class="nrgCamChg-top"
                     tableType="CampaignTable"
                     >
                <u:columns>
                    <u:TableColumn>
                        <c:Label text="Promo Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Offer Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Term Length"/>
                    </u:TableColumn>
                    <u:TableColumn>
                        <c:Label text="Start Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="End Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Cancellation Fee"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Incentive"/>
                    </u:TableColumn>
                </u:columns>
                <u:rows>
                    <u:TableRow>
                        <c:Label text="{comp-campaign>Promo}"/>
                        <c:Label text="{comp-campaign>OfferCode}"/>
                        <c:Label text="{comp-campaign>Term}"/>
                        <c:Label text="{path: 'comp-campaign>StartDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{path: 'comp-campaign>EndDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{comp-campaign>CncFee}"/>
                        <c:Label text="{comp-campaign>Incentive}"/>
                    </u:TableRow>
                </u:rows>
            </u:Table>
            <u:Tag class="nrgCamChgBtnT nrgCamChg-top" >
                <um:Button id="idnrgCamChgBtn-Ok"
                           press=".onAcceptCampaign"
                           text="{comp-i18n-campaign>nrgCmpChgBtnOk}"
                           class="nrgCamChgBtn"
                           design="Default">
                </um:button>
                <um:Button id="idnrgCamChgBtn-Dec"
                           press=".onDeclineCampaign"
                           text="{comp-i18n-campaign>nrgCmpChgBtnDec}"
                           class="nrgCamChgBtn"
                           design="Default">
                </um:button>
            </u:Tag>
      </u:Tag>
   </u:Tag>
</mvc:View>
