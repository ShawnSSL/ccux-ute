<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          xmlns:m="sap.m"
          xmlns:um="ute.ui.main"
          controllerName="nrg.module.campaign.view.Offers"
          height="100%"
          width="100%"
          displayBlock="true"
          busy="{appView>/busy}"
	      busyIndicatorDelay="{appView>/delay}">
    <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
        <u:Tag class="nrgCmpOff">
            <u:Tag class="nrgCamOff-ttl" text="{comp-i18n-campaign>nrgCmpOffTtl}" />
             <um:Button press=".backToOverview"
                        text="{comp-i18n-campaign>nrgCmpBckOverview}"
                        class="nrgCamOff-Back"
                        design="None">
            </um:button>
            <u:Tag class="nrgCmpOff-partDisplay">
                <u:Tag class="nrgCmpOff-compare">
                    <u:Tag class="nrgCamOff-ttlC" text="{comp-i18n-campaign>nrgCmpOffCompareBy}" />
                    <um:TabBar id="nrgTabBar" design="None" select=".onSelected" class="nrgCamOff-tabBar">
                        <um:TabBarItem key="tb001" design="None" press=".onPressed" selected="true" class="nrgCamOff-tabBarItem">
                            <u:Tag text="{comp-i18n-campaign>nrgCmpOffCpInvoice}" />
                        </um:TabBarItem>
                        <br/>
                        <um:TabBarItem key="tb002"  design="None" press=".onPressed" class="nrgCamOff-tabBarItem">
                            <u:Tag text="{comp-i18n-campaign>nrgCmpOffCpConsumption}" />
                        </um:TabBarItem>
                    </um:TabBar>
                </u:Tag>
                <um:TabPanel tabPanelFor="nrgTabBar" design="None" class="nrgCmpOff-tabPanel">
                    <um:TabPanelItem key="tb001" class="nrgCmpOff-tabPanelItem">
                        <u:Tag class="nrgCmpOff-display-invoice" id="idnrgCmpOffDisplay-1">
                             <core:Fragment fragmentName="nrg.module.campaign.view.Invoice" type="XML" />
                             <core:Fragment fragmentName="nrg.module.campaign.view.Invoice" type="XML" />
                        </u:Tag>
                    </um:TabPanelItem>
                    <um:TabPanelItem key="tb002" class="nrgCmpOff-tabPanelItem">
                        <u:Tag class="nrgCmpOff-display-consumption" id="idnrgCmpOffDisplay-2">
                            <core:Fragment fragmentName="nrg.module.campaign.view.Cons" type="XML" />
                            <core:Fragment fragmentName="nrg.module.campaign.view.Cons" type="XML" />
                       </u:Tag>
                    </um:TabPanelItem>
                </um:TabPanel>
            </u:Tag>
            <u:Tag class="nrgCamOff-disc" text="{comp-i18n-campaign>nrgCmpOffDisclosure}" />
            <m:SearchField width="50%" class="nrgCamOff-search" placeholder="Search Ex:Campaign Name, Promo Code, Price"/>
            <u:Tag class="nrgCmpOff-partTiles">
                <u:Tag class="nrgCmpOff-tiers">
                    <u:Tag class="nrgCmpOff-tier">
                        <um:Button id="idCamToggleBtn-P"
                            press=".toggleTier"
                            text="{comp-i18n-campaign>nrgCmpOffTProactive}"
                            class="nrgCamOff-offerBtn"
                            design="None">
                        </um:button>
                    </u:Tag>
                    <u:Tag class="nrgCmpOff-tier">
                        <um:Button id="idCamToggleBtn-R"
                            press=".toggleTier"
                            text="{comp-i18n-campaign>nrgCmpOffTReactive}"
                            class="nrgCamOff-offerBtn"
                            design="None">
                        </um:button>
                    </u:Tag>
                    <u:Tag class="nrgCmpOff-tier">
                        <um:Button id="idCamToggleBtn-S"
                            press=".toggleTier"
                            text="{comp-i18n-campaign>nrgCmpOffTSave}"
                            class="nrgCamOff-offerBtn"
                            design="None">
                        </um:button>
                    </u:Tag>
                    <u:Tag class="nrgCmpOff-tier">
                        <um:Button id="idCamToggleBtn-F"
                            press=".toggleTier"
                            text="{comp-i18n-campaign>nrgCmpOffTFinalSave}"
                            class="nrgCamOff-offerBtn"
                            design="None">
                        </um:button>
                    </u:Tag>
                </u:Tag>
                <u:Tag class="nrgCmpOff-tiles">
                    <m:ScrollContainer
                        height="267px"
                        width="100%"
                        horizontal="false"
                        vertical="true"
                        focusable="true"
                        class="nrgCamOff-scroll"
                        id="idnrgCamOffScroll" >

                    </m:ScrollContainer>
                </u:Tag>
            </u:Tag>
            <!-- Place holder for templates to reuse for Bind Aggregation method. Below will be always Display:none -->
            <u:Tag class="nrgCamOff-hide">
                        <um:Button press=".onOfferSelected"
                                   text="{comp-campaign>Notitle}"
                                   class="nrgCamOff-btn"
                                   id="idnrgCamOffBt" design="None">
                            <u:Tag class="nrgCamOff-btnInfo">
                                <u:Tag class="nrgCamOff-btnCF" text="{parts:[{path:'comp-campaign>CncFee',
                                                                type: 'nrg.util.type.Price',
                                                                formatOptions: { currencySymbol: '$', currencyAlignment: 'RHS' }},
                                                           {path: 'comp-campaign>Incentive',
                                                                type: 'nrg.util.type.Price',
                                                                formatOptions: { currencySymbol: '$', currencyAlignment: 'RHS' } }],
                                                    formatter:'.formatCancelFee'}" />

                                <u:Tag class="nrgCamOff-btnPC"
                                       text="{parts:[{path:'comp-campaign>Promo'}],
                                                    formatter:'.formatPromo'}"/>
                            </u:Tag>
                            <u:Tag class="nrgCamOff-btnTtl" text="{comp-campaign>OfferTitle}" />
                            <u:Tag class="nrgCamOff-btnPrc" text="{path: 'comp-campaign>EFLPrice',
                                                                type: 'nrg.util.type.Price',
                                                                formatOptions: { currencySymbol: 'Â¢', currencyAlignment: 'RHS' }}" />
                            <u:Tag class="nrgCamOff-btnPrcLbl" text="{comp-campaign>EFLLevel}" />
                        </um:Button>
            </u:Tag>
           <!-- Place holder for templates to reuse for Bind Aggregation method. Above will be always Display:none -->
        </u:Tag>
    </u:Tag>
</mvc:View>
