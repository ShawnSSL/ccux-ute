<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.module.campaign.view.SalesScript"
          height="100%"
          width="100%"
          displayBlock="true"
          busy="{appView>/busy}"
	      busyIndicatorDelay="{appView>/delay}">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamSS">
         <u:Tag class="nrgCamSS-ttl" text="{comp-i18n-campaign>nrgCmpSSTtl}" />
             <um:Button press=".backToOverview"
                        text="{comp-i18n-campaign>nrgCmpBckOverview}"
                        class="nrgCamOff-Back"
                        design="None">
            </um:button>
            <l:MatrixLayout class="nrgCamSS-mtx nrgCamSS-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label text="{comp-i18n-campaign>nrgCmpSSTtllbl}"
                                 icon="sap-icon://nrg-icon/tag"
                                 class="nrgCamSS-lbl"
                                 labelFor="idCamSSTtlTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamSSTtlTv"
                                    text="{comp-campaign>OfferTitle}"
                                    class="nrgCamSS-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamSS-DdL">
                <um:Dropdown id="idnrgCamSSDdL" selectedKey="2" select=".onSelected">
                    <um:DropdownItem key="{comp-campaign>TxtLang}" id="idnrgCamSSLngLtIt">
                        <u:Tag text="{comp-campaign>TxtLang}" />
                    </um:DropdownItem>
                </um:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamSS-Dsc">
                    <c:Label text="{comp-i18n-campaign>nrgCmpSSMdlbl}"
                             class="nrgCamSS-mdlbl nrgCamSS-top nrgCamSS-left"
                             labelFor="idCamSSMdTv" />
                    <u:TextView
                        id="idCamSSMdTv"
                        color="DarkGrey"
                        class="nrgCamSS-left nrgCamSS-top"
                        design="Base"
                        text="{comp-campaign>TxtLine}" />
            </u:Tag>
            <u:Tag class="nrgCamSS-btnTag nrgCamSS-top" >
                <u:Button
                    id="idnrgCamSSBtn-Ok"
                    text="{comp-i18n-campaign>nrgCmpSSBtnOk}"
                    enabled="true"
                    class="nrgCamSS-btn"
                    press=".onAccept">
                </u:Button>
                <um:Dropdown id="dd001" content="{comp-campaign>/RejectRsnS}" selectedKey="2" select=".onSelected" placeholder="Non-Disposition Reason">
                    <um:DropdownItem key="{comp-campaign>RejectionCode}">
                        <u:Tag text="{comp-campaign>Description}" />
                    </um:DropdownItem>
                </um:Dropdown>
            </u:Tag>
          <u:Dialog id="idnrgCamOvsDialog">
            <u:Tag class="nrgCamOVS-DdL">
                <um:Dropdown selectedKey="0" id="idnrgCamOvsDdL">
                    <um:DropdownItem key="{comp-campaign>TxtLang}" id="idnrgCamOvsLngLtIt">
                        <u:Tag text="{comp-campaign>TxtLang}" />
                    </um:DropdownItem>
                </um:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamOvs-Dsc">
                    <u:TextView
                        id="idnrgCamOvsOvTv"
                        color="DarkGrey"
                        class="nrgCamOvs-left nrgCamOvs-top"
                        design="Base"
                        text="{comp-campaign>TxtLine}" />
            </u:Tag>
            <u:Tag class="nrgCamOvs-btnTag nrgCamOvs-top" >
                <u:Button
                    id="idnrgCamOvsBtn-Ok"
                    text="{comp-i18n-campaign>nrgCmpSSBtnOk}"
                    enabled="true"
                    class="nrgCamOvs-btn">
                </u:Button>
                <u:Button
                    id="idnrgCamOvsBtn-Dec"
                    text="{comp-i18n-campaign>nrgCmpSSBtnDec}"
                    enabled="true"
                    class="nrgCamOvs-btn">
                </u:Button>
            </u:Tag>
          </u:Dialog>
      </u:Tag>
   </u:Tag>
</mvc:View>
