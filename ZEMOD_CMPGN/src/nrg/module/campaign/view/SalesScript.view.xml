<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.module.campaign.view.SalesScript"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamSS">
         <u:Tag class="nrgCamSS-ttl" text="{comp-i18n-campaign>nrgCmpSSTtl}" />
            <l:MatrixLayout class="nrgCamSS-mtx nrgCamSS-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label text="{comp-i18n-campaign>nrgCmpSSTtllbl}"
                                 icon="sap-icon://nrg-icon/tag"
                                 class="nrgCamSS-lbl"
                                 labelFor="idCamSSTtlTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamSSTtlTv"
                                    text="{comp-campaign>OfferTitle}"
                                    class="nrgCamSS-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamSS-DdL">
                <u:Dropdown
                            id="idnrgCamSSDdL"
                            arrowcolor="Grey"
                            arrowType="Hollow"
                            enabled="true"
                            background="Transparent"
                            title="Language"
                            border="Bottom"
                            width="100px"
                            padding="5px"
                            DropdownListItems="{comp-campaign>/languageData}">
                    <u:DropdownListItems>
                        <u:DropdownListItem id="idnrgCamSSLngLtIt" key="{comp-campaign>TxtLang}">
                            <c:Label text="{comp-campaign>TxtLang}"/>
                        </u:DropdownListItem>
                    </u:DropdownListItems>
                </u:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamSS-Dsc">
                    <c:Label text="{comp-i18n-campaign>nrgCmpSSMdlbl}"
                             class="nrgCamSS-mdlbl nrgCamSS-top nrgCamSS-left"
                             labelFor="idCamSSMdTv" />
                    <u:TextView
                        id="idCamSSMdTv"
                        color="DarkGrey"
                        class="nrgCamSS-left nrgCamSS-top"
                        design="Base"
                        text="{comp-campaign>TxtLine}" />
            </u:Tag>
            <u:Tag class="nrgCamSS-btnTag nrgCamSS-top" >
                <u:Button
                    id="idnrgCamSSBtn-Ok"
                    text="{comp-i18n-campaign>nrgCmpSSBtnOk}"
                    enabled="true"
                    class="nrgCamSS-btn"
                    press=".onAccept">
                </u:Button>
                <u:Dropdown
                            id="idnrgCamSSDisRn"
                            class="nrgCamSS-DisRn"
                            arrowcolor="Grey"
                            arrowType="Hollow"
                            enabled="true"
                            title="{comp-i18n-campaign>nrgCmpChgDisResTtl}"
                            background="Transparent"
                            border="Bottom"
                            width="300px"
                            padding="5px"
                            DropdownListItems="{comp-campaign>/RejectionReasonS}">
                    <u:DropdownListItems>
                        <u:DropdownListItem key="{comp-campaign>RejectionCode}">
                            <c:Label text="{comp-campaign>Description}"/>
                        </u:DropdownListItem>
                    </u:DropdownListItems>
                </u:Dropdown>
            </u:Tag>
          <u:Dialog id="idnrgCamOvsDialog">
            <u:Tag class="nrgCamOVS-DdL">
                <u:Dropdown
                            id="idnrgCamOvsDdL"
                            arrowcolor="Grey"
                            arrowType="Hollow"
                            enabled="true"
                            background="Transparent"
                            title="Language"
                            border="Bottom"
                            width="100px"
                            padding="5px">
                    <u:DropdownListItems>
                        <u:DropdownListItem id="idnrgCamOvsLngLtIt" key="{comp-campaign>TxtLang}">
                            <c:Label text="{comp-campaign>TxtLang}"/>
                        </u:DropdownListItem>
                    </u:DropdownListItems>
                </u:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamOvs-Dsc">
                    <u:TextView
                        id="idnrgCamOvsOvTv"
                        color="DarkGrey"
                        class="nrgCamOvs-left nrgCamOvs-top"
                        design="Base"
                        text="{comp-campaign>TxtLine}" />
            </u:Tag>
            <u:Tag class="nrgCamOvs-btnTag nrgCamOvs-top" >
                <u:Button
                    id="idnrgCamOvsBtn-Ok"
                    text="{comp-i18n-campaign>nrgCmpSSBtnOk}"
                    enabled="true"
                    class="nrgCamOvs-btn">
                </u:Button>
                <u:Button
                    id="idnrgCamOvsBtn-Dec"
                    text="{comp-i18n-campaign>nrgCmpSSBtnDec}"
                    enabled="true"
                    class="nrgCamOvs-btn">
                </u:Button>
            </u:Tag>
          </u:Dialog>
      </u:Tag>
   </u:Tag>
</mvc:View>
