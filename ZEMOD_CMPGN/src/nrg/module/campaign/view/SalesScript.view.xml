<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.module.campaign.view.SalesScript"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamSS">
         <u:Tag class="nrgCamSS-ttl" text="{comp-i18n-campaign>nrgCmpSSTtl}" />
<!--             <um:Button press=".backToOverview"
                        text="{comp-i18n-campaign>nrgCmpBckOverview}"
                        class="nrgCamOff-Back"
                        design="None">
            </um:button>-->
            <l:MatrixLayout class="nrgCamSS-mtx nrgCamSS-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label text="{comp-i18n-campaign>nrgCmpSSTtllbl}"
                                 icon="sap-icon://nrg-icon/tag"
                                 class="nrgCamSS-lbl"
                                 labelFor="idCamSSTtlTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamSSTtlTv"
                                    text="{comp-campaign>OfferTitle}"
                                    class="nrgCamSS-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamSS-left">
                <um:Dropdown id="idnrgCamSSDdL" select=".onMandLngSelected" class="nrgCamSSLng-DdL">
                    <um:DropdownItem key="{comp-campaign>TxtLang}" class="nrgCamSSLng-DdLItem">
                        <u:Tag text="{parts:[{path:'comp-campaign>TxtLang'}],
                                                    formatter:'.formatType'}"/>
                    </um:DropdownItem>
                </um:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamSS-Dsc">
                    <c:Label text="{comp-i18n-campaign>nrgCmpSSMdlbl}"
                             class="nrgCamSS-mdlbl nrgCamSS-top nrgCamSS-left"
                             labelFor="idCamSSMdTv" />
                    <core:HTML id="idCamSSMdTv" content='&lt;div class=&quot;nrgCamSS-left nrgCamSS-top nrgCamSS-Mand&quot;&gt;{comp-campaign>TxtLine}&lt;/div&gt;'>
                    </core:HTML>
            </u:Tag>
            <u:Tag class="nrgCamSS-btnTag nrgCamSS-top" >
                <u:Button
                    id="idnrgCamSSBtn-Ok"
                    text="{comp-i18n-campaign>nrgCmpSSBtnOk}"
                    enabled="true"
                    class="nrgCamSS-btn"
                    press=".onAccept">
                </u:Button>
                <um:Dropdown id="idnrgRejectRsnsMD"
                             select=".onDisposition"
                             placeholder="Non-Disposition Reason"
                             class="nrgCamSSRr-DdL nrgCamSS-left">
                    <um:DropdownItem key="{comp-campaign>RejectionCode}" class="nrgCamSSRr-DdLItem">
                        <u:Tag text="{comp-campaign>Description}" />
                    </um:DropdownItem>
                </um:Dropdown>
            </u:Tag>
        <u:Tag class="nrgCamSS-hide">
            <um:Dropdown class="nrgCamSSLng-DdL">
                <um:DropdownItem key="{comp-campaign>TxtLang}" id="idnrgCamSSLngLtIt" class="nrgCamSSLng-DdLItem">
                    <u:Tag text="{parts:[{path:'comp-campaign>TxtLang'}],
                                                formatter:'.formatType'}"/>
                </um:DropdownItem>
                <um:DropdownItem key="{view-campaign>TxtLang}" id="idnrgCamSSLngLtItOv" class="nrgCamSSLng-DdLItem">
                    <u:Tag text="{parts:[{path:'view-campaign>TxtLang'}],
                                                formatter:'.formatType'}"/>
                </um:DropdownItem>
            </um:Dropdown>
        </u:Tag>
      </u:Tag>
      <u:Tag visible="false">
            <um:Dropdown>
                <um:DropdownItem key="{comp-campaign>RejectionCode}" class="nrgCamSSRr-DdLItem" id="idnrgRejectRsnsTempl">
                    <u:Tag text="{comp-campaign>Description}" />
                </um:DropdownItem>
                <um:DropdownItem key="{view-campaign>RejectionCode}" class="nrgCamSSRr-DdLItem" id="idnrgRejectRsnsTemplOV">
                    <u:Tag text="{view-campaign>Description}" />
                </um:DropdownItem>
            </um:Dropdown>
      </u:Tag>
   </u:Tag>
</mvc:View>
