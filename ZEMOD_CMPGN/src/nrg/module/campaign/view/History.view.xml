<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          xmlns:m="sap.m"
          xmlns:um="ute.ui.main"
          controllerName="nrg.module.campaign.view.History"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamHis">
            <l:MatrixLayout class="nrgCamHis-Mtx nrgCamHis-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView text="{comp-campaign>OfferTitle}"
                                    class="nrgCamHis-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag>
                <u:Table width="60%"
                         tableType="CampaignTable"
                         class="nrgCamHis-left nrgCamHis-top">
                        <u:columns>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@500"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@1000"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@2000"/>
                            </u:TableColumn>
                        </u:columns>
                        <u:rows>
                            <u:TableRow>
                                <c:Label text="{comp-campaign>EFL500}"/>
                                <c:Label text="{comp-campaign>EFL1000}"/>
                                <c:Label text="{comp-campaign>EFL2000}"/>
                            </u:TableRow>
                        </u:rows>
                </u:Table>
            </u:Tag>
            <u:Tag>
                    <u:TextView color="DarkGrey"
                                class="nrgCamHis-left nrgCamHis-top"
                                design="Base"
                                text="{comp-campaign>Description}" />
            </u:Tag>
            <u:Table width="99%"
                     class="nrgCamHis-top"
                     tableType="CampaignTable">
                <u:columns>
                    <u:TableColumn width="14%" >
                        <c:Label text="Promo Code"/>
                    </u:TableColumn>
                    <u:TableColumn width="14%" >
                         <c:Label text="Offer Code"/>
                    </u:TableColumn>
                    <u:TableColumn width="14%" >
                         <c:Label text="Term Length"/>
                    </u:TableColumn>
                    <u:TableColumn width="14%" >
                         <c:Label text="Cancellation Fee"/>
                    </u:TableColumn>
                </u:columns>
                <u:rows>
                    <u:TableRow>
                        <c:Label text="{comp-campaign>Promo}"/>
                        <c:Label text="{comp-campaign>OfferCode}"/>
                        <c:Label text="{comp-campaign>Term}"/>
                        <c:Label text="{comp-campaign>CncFee}"/>
                    </u:TableRow>
                </u:rows>
            </u:Table>
            <u:Tag class="nrgCamHis-Div"></u:Tag>
          <m:ScrollContainer
            height="135px"
            width="100%"
            horizontal="false"
            vertical="true"
            focusable="true"
            class="nrgCamHis-scroll"
            id="idnrgCamHisScroll" >
                    <um:Button press=".onPressed"
                               text="{comp-campaign>Notitle}"
                               class="nrgCamHis-but"
                               id="idnrgCamHisBut"
                               design="None">
                            <u:Tag class="nrgCamHis-but-Date"
                                   text="{parts:[{path:'comp-campaign>StartDate',
                                   type: 'sap.ui.model.type.Date',
                                   formatOptions:{pattern: 'MM/dd/yyyy'} },
                                   {path: 'comp-campaign>EndDate',
                                   type: 'sap.ui.model.type.Date',
                                   formatOptions:{pattern: 'MM/dd/yyyy'} }],
                                   formatter:'.formatTileDate'}" />
                            <u:Tag class="nrgCamHis-but-title"
                                   text="{comp-campaign>OfferTitle}" />
                            <u:Tag class="nrgCamHis-but-price"
                                   text="{path: 'comp-campaign>EFL2000',
                                   type: 'nrg.util.type.Price',
                                   formatOptions: { currencySymbol: 'Â¢', currencyAlignment: 'RHS' }}" />
                            <u:Tag class="nrgCamHis-but-priceLbl"
                                   text="{comp-i18n-campaign>nrgCmpHiskWhDisc}" />
                    </um:Button>
          </m:ScrollContainer>
      </u:Tag>
   </u:Tag>
</mvc:View>
