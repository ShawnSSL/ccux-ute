<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:u="ute.ui.commons"
    xmlns:um="ute.ui.main"
    xmlns:l="sap.ui.commons.layout">
        <u:Tag class="nrgCamOff-consF">
            <c:Label text="{= ${comp-campaign>OfferTitle} ? ${comp-campaign>OfferTitle} : 'Select Offer Below' }"
                     icon="sap-icon://nrg-icon/tag"
                     class="nrgCamOff-top nrgCamOff-cardTitle"  />
            <um:Button press=".selectCampaign"
                       text="Select"
                       class="nrgCamOvr-selectBtn"
                       design="None">
            </um:button>
            <um:Checkbox id="idnrgCamOffpin" class="custom" design="None" checked="false" select=".pinComparisionCard"/>
            <um:Label labelFor="idnrgCamOffpin-intChk">
               <core:Icon src="sap-icon://pushpin-off" class="icon" id="nrgCamOff-PinId"/>
            </um:Label>
            <u:Tag class="nrgCamOff-prcTbl" id="idnrgCamOffPriceT">
                <!-- EFL Data Table is dynamically inserted here with XML templating -->
            </u:Tag>
            <u:Tag class="nrgCamOff-mtx nrgCamOff-top">
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Monthly Consumption" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{parts:[{path:'comp-campaign>CurrInvAmt'},{path:'comp-campaign>SimCurrInv'}],
                                                    formatter:'.formatCurrentConsAmount'}"
                           class="nrgCamOff-mtxSndCell"/>
                </u:Tag>
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Monthly Consumption @ Campaign Estimation" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{= ${comp-campaign>EstInvAmt} ? ${comp-campaign>EstInvAmt} : 'N/A' }"
                           class="nrgCamOff-mtxSndCell"/>
                </u:Tag>
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Estimated Difference" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{parts:[{path:'comp-campaign>CurrInvAmt'},{path:'comp-campaign>EstInvAmt'}],
                                                    formatter:'.formatDifference'}"
                           class="nrgCamOff-mtxSndCell"/>
                </u:Tag>
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Estimated Cents per kWh" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{= ${comp-campaign>EstCents} ? ${comp-campaign>EstCents} : 'N/A' }"
                           class="nrgCamOff-mtxSndCell">
                        <u:customData>
                             <core:CustomData key="flag"
                                               value="X"
                                               writeToDom="true" />
                        </u:customData>
                    </u:Tag>
                </u:Tag>
            </u:Tag>
        </u:Tag>
</core:FragmentDefinition>
