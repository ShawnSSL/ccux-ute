<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:u="ute.ui.commons"
    xmlns:um="ute.ui.main"
    xmlns:l="sap.ui.commons.layout">
        <u:Tag class="nrgCamOff-consF">
            <c:Label text="Work in Progress"
                     icon="sap-icon://nrg-icon/tag"
                     class="nrgCamOff-top"  />
            <um:Button press=".selectCampaign"
                       text="Select"
                       class="nrgCamOvr-selectBtn"
                       design="None">
            </um:button>
            <u:Table width="100%"
                tableType="CampaignTable"
                class="nrgCamOff-prcTbl"  >
                    <u:columns>
                        <u:TableColumn width="33%" >
                            <u:Tag text="EFL@500" class="nrgCamOff-label"/>
                        </u:TableColumn>
                        <u:TableColumn width="33%" >
                            <u:Tag text="EFL@1000" class="nrgCamOff-label"/>
                        </u:TableColumn>
                        <u:TableColumn width="33%" >
                            <u:Tag text="EFL@2000" class="nrgCamOff-label"/>
                        </u:TableColumn>
                    </u:columns>
                    <u:rows>
                        <u:TableRow>
                            <u:Tag text="14.4" class="nrgCamOff-label"/>
                            <u:Tag text="12.4" class="nrgCamOff-label"/>
                            <u:Tag text="13.4" class="nrgCamOff-label"/>
                        </u:TableRow>
                    </u:rows>
            </u:Table>
            <u:Tag class="nrgCamOff-mtx nrgCamOff-top">
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Monthly Consumption" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{oViewModel>CurrInvAmt}" class="nrgCamOff-mtxSndCell"/>
                </u:Tag>
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Monthly Consumption @ Campaign Estimation" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{oViewModel>EstInvoice}" class="nrgCamOff-mtxSndCell"/>
                </u:Tag>
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Estimated Difference" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{oViewModel>EstDiff}" class="nrgCamOff-mtxSndCell"/>
                </u:Tag>
                <u:Tag class="nrgCamOff-mtxRow">
                    <u:Tag text="Estimated Cents per kWh" class="nrgCamOff-mtxFstCell"/>
                    <u:Tag text="{oViewModel>EstcentsperkWh}" class="nrgCamOff-mtxSndCell">
                        <u:customData>
                             <core:CustomData key="flag"
                                               value="X"
                                               writeToDom="true" />
                        </u:customData>
                    </u:Tag>
                </u:Tag>
            </u:Tag>
        </u:Tag>
</core:FragmentDefinition>
