                </utmain:Label>
                <ute:Tag elem="span"
                    class="nrgDashboard-cusDataSum-cusSeg-val"
                    id="cs_seg"
                    text="Priority One">
                </ute:Tag>
                <utmain:Label
                    class="nrgDashboard-cusDataSum-cusSeg-label"
                    text="Customer Segmentation:"
                    labelFor="cs_seg1">
                </utmain:Label>
                <ute:Tag elem="span"
                    class="nrgDashboard-cusDataSum-cusSeg-val"
                    id="cs_seg1"
