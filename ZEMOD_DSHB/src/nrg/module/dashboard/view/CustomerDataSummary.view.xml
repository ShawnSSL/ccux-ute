<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    controllerName="nrg.module.dashboard.view.CustomerDataSummary">

    <ute:Tag class="nrgDashboard-cusDataSum nrgAppMain-summaryContent nrgAppMain-summaryContent-full">
        <ute:content>
            <ute:TextView
                class="nrgDashboard-cusDataSum-bpName"
                design="Large" text="BP_Name_Here">
            </ute:TextView>
            <ute:Badge
                class="nrgDashboard-cusDataSum-badge"
                design="Attention" size="30px"
                text="TT">
            </ute:Badge>
            <ute:Badge
                class="nrgDashboard-cusDataSum-badge"
                design="Alert" size="30px"
                text="TT">
            </ute:Badge>
            <ute:Tag class="nrgDashboard-cusDataSum-bpCaArea">
                <utmain:Label
                    class="nrgDashboard-cusDataSum-bpLabel"
                    text="BP #"
                    labelFor="db_verify_BP">
                </utmain:Label>
                <ute:Tag elem="span"
                    id="db_verify_BP"
                    text="00000000">
                </ute:Tag>
            </ute:Tag>
            <ute:Tag class="nrgDashboard-cusDataSum-bpCaArea">
                <utmain:Label
                    class="nrgDashboard-cusDataSum-bpLabel"
                    text="CA #"
                    labelFor="db_verify_CA">
                </utmain:Label>
                <ute:Tag elem="span"
                    id="db_verify_CA"
                    text="00000000">
                </ute:Tag>
            </ute:Tag>

            <ute:HorizontalDivider class="nrgDashboard-cusDataSum-horiLine"/>

            <l:MatrixLayout class="nrgDashboard-cusDataSum-weather"
                widths="20%,80%" columns="2" width="100%">
                <l:rows>
                    <l:MatrixLayoutRow>
                        <l:cells>
                            <l:MatrixLayoutCell>
                                <core:Icon
                                    class="nrgDashboard-cusDataSum-weatherLeft"
                                    src="sap-icon://nrg-icon/weather-cloud"/>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <ute:TextView text="Houston, TX"
                                    class="nrgDashboard-cusDataSum-localRight"/>
                                <ute:TextView text="72 F"
                                    class="nrgDashboard-cusDataSum-localRight"/>
                            </l:MatrixLayoutCell>
                        </l:cells>
                    </l:MatrixLayoutRow>
                </l:rows>
            </l:MatrixLayout>

            <ute:HorizontalDivider class="nrgDashboard-cusDataSum-horiLine"/>

            <ute:Tag class="nrgDashboard-cusDataSum-caName">
                <ute:TextView
                    class="nrgDashboard-cusDataSum-caNameTitle"
                    text="CONTRACT ACCOUNT NAME / DBA">
                </ute:TextView>
                <ute:TextView
                    class="nrgDashboard-cusDataSum-caNameVal"
                    text="Taco Bell. Store 132">
                </ute:TextView>
            </ute:Tag>


            <ute:HorizontalDivider class="nrgDashboard-cusDataSum-horiLine"/>

            <ute:Tag class="nrgDashboard-cusDataSum-cusSeg">
                <utmain:Label
                    class="nrgDashboard-cusDataSum-cusSeg-label"
                    text="Customer Segmentation:"
                    labelFor="cs_seg">
                </utmain:Label>
                <ute:Tag elem="span"
                    class="nrgDashboard-cusDataSum-cusSeg-val"
                    id="cs_seg"
                    text="Priority One">
                </ute:Tag>
                <utmain:Label
                    class="nrgDashboard-cusDataSum-cusSeg-label"
                    text="Customer Segmentation:"
                    labelFor="cs_seg1">
                </utmain:Label>
                <ute:Tag elem="span"
                    class="nrgDashboard-cusDataSum-cusSeg-val"
                    id="cs_seg1"
                    text="Priority One">
                </ute:Tag>
                <utmain:Label
                    class="nrgDashboard-cusDataSum-cusSeg-label"
                    text="Customer Segmentation:"
                    labelFor="cs_seg2">
                </utmain:Label>
                <ute:Tag elem="span"
                    class="nrgDashboard-cusDataSum-cusSeg-val"
                    id="cs_seg2"
                    text="Priority One">
                </ute:Tag>
            </ute:Tag>

            <utmain:Button
                class="nrgDashboard-cusDataSum-assignedAccBtn"
                design="None"
                text="Assigned Account">
            </utmain:Button>

        </ute:content>
    </ute:Tag>

</mvc:View>
