<!--Routing Pattern: BillingInfo-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    controllerName="nrg.module.dashboard.view.CallerNoIDEnrollment">

    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-cusDataBillingInfo">
        <ute:Tag elem="span" class="nrgDashboard-cusDataBil-scrnTitle" text="CURRENT AMOUNT DUE" />

        <ute:Tag elem="span" class="nrgDashboard-cusDataBil-r-btn">
            <utmain:Button design="None" class="nrgDashboard-cusDataBil-CommBtn" press="onPayNow">
                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-PayBalBtn-text" text="Fee Adjustments" />
            </utmain:Button>
        </ute:Tag>

        <l:MatrixLayout
            class="nrgDashboard-cusDataBil-layout"
            widths="242px,384px,384px" columns="3" width="100%">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:cells>
                        <!--Area Left-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-l">
                            <ute:Tag class="nrgDashboard-cusDataBil-l-div">
                                <utmain:Button design="None" class="nrgDashboard-cusDataBil-PayBalBtn" press="onPayNow">
                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-PayBalBtn-amount" text="$200.00" />
                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-PayBalBtn-text" text="PAY NOW" />
                                </utmain:Button>

                                <utmain:Label text="INVOICE #:" labelFor="invoice"
                                   class="nrgDashboard-cusDataBil-invoice-lbl"/>
                                <ute:tag id="invoice" elem="span">
                                    <ute:Tag elem="span" class="nrgDashboard-cusDataBil-invoice-id" text="000 000 000 000" />
                                    <core:Icon src="sap-icon://nrg-icon/calendar" class="nrgDashboard-cusDataBil-Icon" />
                                </ute:tag>

                                <ute:tag elem="div">
                                    <utmain:Label text="REFER TO:" labelFor="referrer"
                                       class="nrgDashboard-cusDataBil-referer-lbl"/>
                                    <select id="referer" class="nrgDashboard-cusDataBil-referer-dropdown">
                                        <option value="checkbook1">Checkbook</option>
                                        <option value="checkbook2">Checkbook</option>
                                        <option value="checkbook3">Checkbook</option>
                                        <option value="checkbook4">Checkbook</option>
                                    </select>
                                </ute:tag>

                                <ute:Tag class="nrgDashboard-cusDataBil-date">
                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-date-label" text="BILLING DATE" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-date-value" text="10/28/2014" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-date-label" text="DUE DATE" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-date-value" text="11/10/2014" />
                                </ute:Tag>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Middle-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-m">
                            <ute:Tag class="nrgDashboard-cusDataBil-m-div">
                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-m-text-amntexpln" text="AMOUNT EXPLANATION" />
                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-m-text-current" text="CURRENT" />

                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-m-matrix">
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="Consumption Electric:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="$80.00" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataBil-horDvi"/>
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="RHS:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="$20.89" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataBil-horDvi"/>
                                    <l:MatrixLayout widths="50%,25%,25%" columns="3">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="Arrangement:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="$99.11" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-r-content-arrange-status">
                                                <ute:Tag elem="span">
                                                    <core:Icon src="sap-icon://nrg-icon/calendar" class="nrgDashboard-cusDataBil-r-content-cnt-icon" />
                                                    <ute:Tag elem="span" class="nrgDashboard-cusDataBil-r-content-cnt-dpp" text="DPP" />
                                                </ute:Tag>
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataBil-horDvi"/>
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl2" text="INVOICE AMOUNT:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt2" text="$200.00" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>

                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataBil-horDvi-long"/>

                                    <ute:Tag elem="span" class="nrgDashboard-cusDataBil-btm-label1" text="Last Payment:" />

                                    <ute:Tag elem="span" class="nrgDashboard-cusDataBil-btm-value" text="$120.00" />

                                    <ute:Tag elem="span" class="nrgDashboard-cusDataBil-btm-label2" text="On date:" />

                                    <ute:Tag elem="span" class="nrgDashboard-cusDataBil-btm-value" text="08/15/2014" />

                                </ute:Tag>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Right-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataBil-r">
                            <ute:Tag class="nrgDashboard-cusDataBil-r-div">
                                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-text-disconnect" text="DISCONNECT" />

                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl1" text="Disconnect notive amount:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt1" text="$130.00" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="Net amount:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="$110.00" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>
                                <l:MatrixLayout widths="60%,40%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-lbl" text="Due Date:" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell>
                                            <ute:Tag elem="div" class="nrgDashboard-cusDataBil-r-content-cnt" text="11/20/2014" />
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataBil-horDvi"/>

                            </ute:Tag>
                        </l:MatrixLayoutCell>

                    </l:cells>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
    </ute:Tag>

</mvc:View>
