<!--Routing Pattern: PrePD-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    controllerName="nrg.module.dashboard.view.CustomerDataPrePD">

    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-cusDataPrePD">
        <ute:Tag elem="span" class="nrgDashboard-cusDataBil-scrnTitle" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-ACCOUNT_BALANCE}" />

        <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-r-btn">
            <utmain:Button design="None" class="nrgDashboard-cusDataBil-CommBtn" press="onPayNow">
                <ute:Tag elem="div" class="nrgDashboard-cusDataBil-PayBalBtn-text" text="Communication Preferences" />
            </utmain:Button>
        </ute:Tag>

        <l:MatrixLayout
            class="nrgDashboard-cusDataPrePD-layout"
            widths="242px,768px" columns="2" width="100%">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:cells>
                        <!--Area Left-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataPrePD-l">
                            <ute:Tag class="nrgDashboard-cusDataPrePD-l-div">
                                <utmain:Button design="None" class="nrgDashboard-cusDataBil-PayBalBtn" press="onPayNow">
                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-PayBalBtn-amount" text="$00.00" />
                                    <ute:Tag elem="div" class="nrgDashboard-cusDataBil-PayBalBtn-text" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-PAY_NOW}" />
                                </utmain:Button>

                                <utmain:Label text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-REFER_TO}:" labelFor="referrer"
                                   class="nrgDashboard-cusDataBil-referer-lbl"/>
                                <!--utmain:Dropdown design="Plain" class="nrgDashboard-cusDataBil-dropdown" content="{checkBook>/dropdown}" selectedKey="{checkBook>/selectedKey}" select=".oncheckbookSelected">
                                    <utmain:DropdownItem key="{checkBook>key}">
                                        <uc:Tag text="{checkBook>value}" />
                                    </utmain:DropdownItem>
                                </utmain:Dropdown-->
                                <select id="referer" class="nrgDashboard-cusDataBil-referer-dropdown">
                                    <option value="checkbook1">Checkbook</option>
                                    <option value="checkbook2">Checkbook</option>
                                    <option value="checkbook3">Checkbook</option>
                                    <option value="checkbook4">Checkbook</option>
                                </select>
                                <!--ute:Tag id="referer" elem="Select"
                                         class="nrgDashboard-cusDataBil-referer-dropdown">
                                </ute:Tag-->
                                <!--ute:Dropdown id="referrer" arrowcolor="Blue" arrowType="Solid"
                                              enabled="true" background="Transparent" border="None"
                                              width="100px"
                                              class="nrgDashboard-cusDataBil-referer-dropdown"/-->

                                <ute:Tag class="nrgDashboard-cusDataPrePD-date">
                                    <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-date-label" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-BILLING_DATE}" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-date-value" text="10/28/2014" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-date-label" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-REMAINING_DAYS}" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-date-value" text="18" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-date-label" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-l-div-DPP_BALANCE}" />

                                    <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-date-value" text="$0.00" />
                                </ute:Tag>
                            </ute:Tag>
                        </l:MatrixLayoutCell>

                        <!--Area Right-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataPrePD-r">
                            <ute:Tag class="nrgDashboard-cusDataPrePD-r-div">

                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-text-amntexpln" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-AMNT_EXP}" />
                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-text-autopayinfo" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-AUTO_PAY_INFO}" />

                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-matrix">
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-lbl" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-AUTO_PAY_TYPE_DESC} :" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-cnt" text="N/A" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataPrePD-horDvi"/>
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-lbl2" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-THRESHOLD_AMNT}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-cnt" text="$0.00" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataPrePD-horDvi"/>
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-lbl2" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-RELOAD_AMNT}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-cnt" text="$0.00" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                    <ute:HorizontalDivider
                                        class="nrgDashboard-cusDataPrePD-horDvi"/>
                                    <l:MatrixLayout widths="50%,50%" columns="2">
                                        <l:MatrixLayoutRow>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-lbl3" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-ACCOUNT_BAL}:" />
                                            </l:MatrixLayoutCell>
                                            <l:MatrixLayoutCell>
                                                <ute:Tag elem="div" class="nrgDashboard-cusDataPrePD-r-content-cnt3" text="$47.61" />
                                            </l:MatrixLayoutCell>
                                        </l:MatrixLayoutRow>
                                    </l:MatrixLayout>
                                </ute:Tag>

                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataPrePD-horDvi-long"/>

                                <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-btm-label1" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-AVG_DAILY_USAGE}:" />

                                <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-btm-value" text="$2.56" />

                                <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-btm-label2" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-AUTO_PAY_DATE} - {comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-START}:" />

                                <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-btm-value" text="00/00/0000" />

                                <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-btm-label3" text="{comp-i18n-dashboard>nrgDashboard-cusDataPrePD-r-div-END}:" />

                                <ute:Tag elem="span" class="nrgDashboard-cusDataPrePD-btm-value" text="00/00/0000" />


                            </ute:Tag>
                        </l:MatrixLayoutCell>

                    </l:cells>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
    </ute:Tag>

</mvc:View>
