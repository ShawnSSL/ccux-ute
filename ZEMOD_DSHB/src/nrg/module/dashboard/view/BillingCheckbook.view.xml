<!--Routing Pattern: customerDataVerification/bp/{bpNum}-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    controllerName="nrg.module.dashboard.view.BillingCheckbook">

    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-billChkBook">
        <!-- Left -->
        <ute:Tag class="nrgDashboard-billChkBook-left">
            <ute:Tag elem="span" class="nrgDashboard-billChkBook-pageTitle" text="{comp-i18n-dashboard>nrgDashboard-billChkBook-PAGE_TITLE}" />
            <ute:Tag elem="div" class="clearfix">
                <ute:HorizontalDivider width="16%" class="nrgDashboard-billChkBook-horiLine"/>
            </ute:Tag>
            <!-- Quick Reference Area -->
            <ute:Tag elem="div" class="nrgDashboard-billChkBook-quickRefArea">
                <ute:Tag elem="div" class="nrgDashboard-billChkBook-quickRefArea-date">
                    <ute:Tag elem="div" class="nrgDashboard-billChkBook-quickRefArea-dateWrap">
                        <l:MatrixLayout
                            class="nrgDashboard-billChkBook-dateTable"
                            layoutFixed="false" widths="40%,60%" columns="2" width="100%">
                            <l:rows>
                                <l:MatrixLayoutRow>
                                    <l:cells>
                                        <l:MatrixLayoutCell class="nrgDashboard-billChkBook-tableCell">
                                            <ute:Tag elem="div" class="nrgDashboard-billChkBook-dateTable-clm1"
                                                     text="Start Date" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell class="nrgDashboard-billChkBook-tableCell">
                                            <ute:Tag elem="div" class="nrgDashboard-billChkBook-dateTable-clm2"
                                                     text="6 months ago" />
                                        </l:MatrixLayoutCell>

                                    </l:cells>
                                </l:MatrixLayoutRow>
                                <l:MatrixLayoutRow>
                                    <l:cells>
                                        <l:MatrixLayoutCell class="nrgDashboard-billChkBook-tableCell">
                                            <ute:Tag elem="div" class="nrgDashboard-billChkBook-dateTable-clm1"
                                                     text="End Date" />
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell class="nrgDashboard-billChkBook-tableCell">
                                            <ute:Tag elem="div" class="nrgDashboard-billChkBook-dateTable-clm2"
                                                     text="today: 08/06/15" />
                                        </l:MatrixLayoutCell>

                                    </l:cells>
                                </l:MatrixLayoutRow>
                            </l:rows>
                        </l:MatrixLayout>
                    </ute:Tag>
                </ute:Tag>
                <utmain:Button design="None" class="nrgDashboard-billChkBook-quickRefArea-amount">
                    <utmain:tooltip class="nrgDashboard-billChkBook-quickRefArea-amount-tooltip">
                        <c:RichTooltip text="TEST" openDelay="50"/>
                    </utmain:tooltip>
                    <ute:Tag elem="span" class="nrgDashboard-billChkBook-amountNum" text="$380.87"/>
                    <ute:Tag elem="sapn" class="nrgDashboard-billChkBook-amountAsterisk" text="*"/>
                    <ute:Tag elem="span" class="nrgDashboard-billChkBook-amountDscrpt1" text="current amount due"/>
                    <ute:Tag elem="span" class="nrgDashboard-billChkBook-amountDscrpt2" text="for no service interuption"/>
                </utmain:Button>
                <ute:Tag elem="div" class="nrgDashboard-billChkBook-quickRefArea-customer">
                    <ute:Button class="nrgDashboard-billChkBook-customer-btn"
                                   text="payment options"/>
                    <ute:Button class="nrgDashboard-billChkBook-customer-btn"
                                   text="high bill factors"/>
                </ute:Tag>
            </ute:Tag>

        </ute:Tag>

        <!-- Right -->
        <ute:Tag class="nrgDashboard-billChkBook-right">
            
        </ute:Tag>
    </ute:Tag>


</mvc:View>
