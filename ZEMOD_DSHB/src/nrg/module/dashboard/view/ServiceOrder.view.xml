 <!--Routing Pattern: ServiceOrder/bp/{bpNum}/ca/{caNum}/co/{coNum}-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    controllerName="nrg.module.dashboard.view.ServiceOrder">

	<ute:Tag class="nrgAppMain-generalContent nrgDashboard-ServOrder">

		<ute:Tag class="nrgDashboard-ServOrder-layout">
			<ute:Tag class="nrgDashboard-ServOrder-layout-left">

				<!--Service Order Status-->
				<ute:Tag elem="span" class="nrgDashboard-ServOrder-scrnTitle"
						 text="{comp-i18n-dashboard>nrgDashboard-ServOrder-ScrnTitle}" />

				<!--Different Type of Orders-->
				<ute:Tag class="nrgDashboard-ServOrder-Orderslist">
					<ute:Tag>
						<utmain:Button class="nrgDashboard-ServOrder-Orderlist-pendingOrder"
							 text="{comp-i18n-dashboard>nrgDashboard-servOrder-Orderlist-PendingOrder}"
							 press="_.onPendingOrdersClicked" design="None">
						</utmain:Button>
					</ute:Tag>
					<ute:Tag>
						 <utmain:Button class="nrgDashboard-ServOrder-Orderlist-completeOrder"
							 text="{comp-i18n-dashboard>nrgDashboard-servOrder-Orderlist-CompleteOrder}"
							 press="_.onCompleteOrdersClicked" design="None">
						 </utmain:Button>
					</ute:Tag>
				</ute:Tag>
			</ute:Tag>
			<ute:Tag class="nrgDashboard-ServOrder-layout-right">
				<ute:Tag class="nrgDashboard-ServOrder-mainlayout">
					<ute:Tag class="nrgDashboard-ServOrder-mainlayout-heading">
						<utmain:Label text="{comp-i18n-dashboard>nrgDashboard-servOrder-Filterby}"/>
					</ute:Tag>
					<ute:Tag class="nrgDashboard-ServOrder-mainlayout-heading-address">
						<utmain:Label text="{comp-i18n-dashboard>nrgDashboard-servOrder-Address}"/>
					</ute:Tag>
					<ute:Tag class="nrgDashboard-ServOrder-mainlayout-heading-address-select">
						<!--<utmain:Dropdown id="ESIDaddress"
										 class="nrgDashboard-ServOrder-mainlayout-heading-address-select-dropdown">
                    		<utmain:DropdownItem>
                       			<ute:Tag elem="span" text="123456789 - 105 MAIN ST UNIT 201 HOUSTON TX 77502-2027"/>
                    		</utmain:DropdownItem>
							<utmain:DropdownItem>
								<ute:Tag elem="span" text="123456789 - 105 MAIN ST UNIT 201 HOUSTON TX 77502-2027"/>
							</utmain:Dropdo-->
                		</utmain:Dropdown>
					</ute:Tag>
				</ute:Tag>
				<ute:Tag class="nrgDashboard-ServOrder-mainlayout-assignmentblock">
					<utmain:Infoline class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein" expanded="true">
						<utmain:headerContent>
                			<ute:TextView class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-infoLineHeader-txt"
										  text="{comp-i18n-dashboard>nrgDashboard-servOrder-Moviein}"/>
            			</utmain:headerContent>
						<utmain:content>
							<ute:Tag id="nrgDashboard-ServOrder-mainlayout-assignmentblock-movein-tableBody" class="nrgDashboard-ServOrder-mainlayout-assignmentblock-movein-tableBody">
									<l:MatrixLayout columns="2" widths="500px,600px" width="100%">
											<l:rows>
												<l:MatrixLayoutRow>
													<l:cells>
														<!--Area Left-->
														<l:MatrixLayoutCell class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-l">
															<l:MatrixLayout widths="30%,70%" columns="2">
																<l:MatrixLayoutRow>
																	<l:MatrixLayoutCell>
																		<ute:Tag elem="div" class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-lbl"
																				 			text="{comp-i18n-dashboard>nrgDashboard-servOrder-Contact}" />
																	</l:MatrixLayoutCell>
																		<l:MatrixLayoutCell>
																			<ute:TextView class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-Cont" text="John Doe"/>
																		</l:MatrixLayoutCell>
																	</l:MatrixLayoutRow>
																</l:MatrixLayout>
															</l:MatrixLayoutCell>

															<!--Area Right-->
															<l:MatrixLayoutCell class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-l">
																<l:MatrixLayout widths="30%,70%" columns="2">
																	<l:MatrixLayoutRow>
																		<l:MatrixLayoutCell>
																			<ute:Tag elem="div" class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-lbl"																						 																		text="{comp-i18n-dashboard>nrgDashboard-servOrder-Date}" />
																		</l:MatrixLayoutCell>
																		<l:MatrixLayoutCell>
																			<ute:TextView class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-Cont" text="03/06/2015"/>
																		</l:MatrixLayoutCell>
																	</l:MatrixLayoutRow>
																</l:MatrixLayout>
															</l:MatrixLayoutCell>
														</l:cells>
													</l:MatrixLayoutRow>
												</l:rows>
											</l:MatrixLayout>

												<!-- Second Row-->
												<l:MatrixLayout columns="2" widths="500px,600px" width="100%">
													<l:rows>
														<l:MatrixLayoutRow>
															<l:cells>
																<!--Area Right-->
																<l:MatrixLayoutCell class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-l">
																	<l:MatrixLayout widths="30%,70%" columns="2">
																		<l:MatrixLayoutRow>
																			<l:MatrixLayoutCell>
																				<ute:Tag elem="div" class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-lbl"
																							 text="{comp-i18n-dashboard>nrgDashboard-servOrder-OriginalDate}" />
																			</l:MatrixLayoutCell>
																			<l:MatrixLayoutCell>
																				<ute:TextView class="nrgDashboard-ServOrder-mainlayout-assigmentblock-movein-lnItem-Cont" text="03/04/2011"/>
																		</l:MatrixLayoutCell>
																	</l:MatrixLayoutRow>
																</l:MatrixLayout>
															</l:MatrixLayoutCell>
														</l:cells>
													</l:MatrixLayoutRow>
												</l:rows>
										</l:MatrixLayout>
