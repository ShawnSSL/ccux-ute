<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ua="ute.ui.app"
    xmlns:sm="sap.m"
    xmlns:core="sap.ui.core">

    <ua:HeaderSubmenu>
        <div class="uteAppHdrSMenu-wrap">
            <sm:ScrollContainer height="200px" width="100%" vertical="true" content="{view-message>/}" >
                <ua:Tag>
                    <core:Icon src="sap-icon://nrg-icon/notification" />
                    <ua:Text text="{view-message>type}" />
                    <ua:Text text="{view-message>description}" />
                    <ua:Text text="{view-message>title}" />
                </ua:Tag>
            </sm:ScrollContainer>
        </div>
    </ua:HeaderSubmenu>

</core:FragmentDefinition>
