<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ua="ute.ui.app"
    xmlns:sm="sap.m"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ute="ute.ui.commons"
    xmlns:core="sap.ui.core">

    <!-- Content -->
    <ute:Tag class="nrgApp-m2mPopup-content">
        <ute:Tag class="nrgApp-m2mPopup-paragraph"
            text="{comp-i18n-app>nrgApp-m2mPopup-TEXT1}"/>

        <!-- Footer -->
        <ute:Tag class="nrgApp-m2mPopup-footer">
            <utmain:Button
                design="None"
                class="nrgApp-m2mPopup-footerBtn"
                press="_onM2mCloseClick">
                <ute:Tag
                    class="nrgApp-m2mPopup-footerBtn-continue"
                    text="{comp-i18n-app>nrgApp-m2mPopup-footerBtn-CLOSE}" />
            </utmain:Button>
        </ute:Tag>
    </ute:Tag>
   
</core:FragmentDefinition>
