<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ua="ute.ui.app"
    xmlns:sm="sap.m"
    xmlns:ute="ute.ui.commons"
    xmlns:core="sap.ui.core">

    <ua:FooterSubmenu class="nrgAppFtrDetails">
        <div class="nrgAppFtrDetails-nav nrgU-clearfix">
            <ua:EventArea id="appFtrSMenuCaret" class="nrgU-right">
                <div class="nrgAppFtrDetails-caret"></div>
            </ua:EventArea>
        </div>
        <div class="nrgAppFtrDetails-content">
            <div class="uteAppHdrSMenu-wrap">
                <!-- Notifications -->
                <ute:Tag class="nrgAppFtrDetails-notification">
                    <!-- Title -->
                    <ute:Tag elem="span" class="nrgAppFtrDetails-notification-title"
                        text="{comp-i18n-app>nrgAppFtrDetails-notification-TITLE}" />
                    <!-- Contents -->
                    <sm:ScrollContainer class="nrgAppFtrDetails-notification-content" height="170px" width="100%" horizontal="true" vertical="true">
                        <ua:FooterNotificationCenter content="{view-data>/notification}">
                            <ua:FooterNotificationItem
                                design="{view-data>design}"
                                link="{view-data>link}"
                                text="{view-data>text}"
                                linkPress="._onFooterNotificationLinkPress" />
                        </ua:FooterNotificationCenter>
                    </sm:ScrollContainer>
                </ute:Tag>
                <!-- RHS -->
                <ute:Tag class="nrgAppFtrDetails-rhs">
                    <!-- Title -->
                    <ute:Tag elem="span" class="nrgAppFtrDetails-rhs-title"
                        text="{comp-i18n-app>nrgAppFtrDetails-rhs-TITLE}" />
                    <!-- Contents -->
                    <sm:ScrollContainer class="nrgAppFtrDetails-rhs-content" height="170px" width="100%" horizontal="true" vertical="true">
                        <ute:Tag class="nrgAppFtrDetails-rhs-item">
                            <ute:Tag class="nrgAppFtrDetails-rhs-currentTitle nrgAppFtrDetails-rhs-contentTitle"
                                text="{comp-i18n-app>nrgAppFtrDetails-notification-CURRENT_TITLE}" />
                        </ute:Tag>
                        <ute:Tag class="nrgAppFtrDetails-rhs-item">
                            <ute:Tag class="nrgAppFtrDetails-rhs-pendingTitle nrgAppFtrDetails-rhs-contentTitle"
                                text="{comp-i18n-app>nrgAppFtrDetails-notification-PENDING_TITLE}" />
                        </ute:Tag>
                        <ute:Tag class="nrgAppFtrDetails-rhs-item">
                            <ute:Tag class="nrgAppFtrDetails-rhs-historyTitle nrgAppFtrDetails-rhs-contentTitle"
                                text="{comp-i18n-app>nrgAppFtrDetails-notification-HISTORY_TITLE}" />
                        </ute:Tag>
                    </sm:ScrollContainer>
                    
                </ute:Tag>
                <!-- Eligible Offers -->
                <ute:Tag class="nrgAppFtrDetails-eligibleOffers">
                    <!-- Title -->
                    <ute:Tag elem="span" class="nrgAppFtrDetails-eligibleOffers-title"
                        text="{comp-i18n-app>nrgAppFtrDetails-eligibleOffers-TITLE}" />
                    
                </ute:Tag>
            </div>
        </div>
    </ua:FooterSubmenu>

</core:FragmentDefinition>
