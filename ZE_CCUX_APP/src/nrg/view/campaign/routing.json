{
    "sap.ui5": {
        "routing": {
            "routes": {
                "campaign": {
                    "pattern": "bp/{bpNum}/ca/{caNum}/campaign",
                    "target": [ "campaign.Overview", "dashboard.SummaryBP", "campaign.Tools" ]
                }
            },

            "targets": {
                "campaign.General": {
                    "viewName": "campaign.General",
                    "controlId": "idAppGeneral"
                },
                "campaign.Overview": {
                    "viewName": "campaign.Overview",
                    "controlId": "idAppGeneral"
                },
                "campaign.Tools": {
                    "viewName": "campaign.Tools",
                    "controlId": "idAppTools"
                }
            }
        }
    }
}
