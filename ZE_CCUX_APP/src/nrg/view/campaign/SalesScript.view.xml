<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.view.campaign.SalesScript"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamSST">
         <u:Tag class="nrgCamSSTtlT" text="{comp-i18n>nrgCmpSSTtl}" />
            <l:MatrixLayout class="nrgCamSSMtx nrgCamSS-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label id="idCamSSTtlLbl" text="{comp-i18n>nrgCmpSSTtllbl}" icon="sap-icon://nrg-icon/tag" class="nrgCamSS-lbl"  labelFor="idCamSSTtlTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamSSTtlTv" text="CNP AVG@2000=11.3 Secure Advantage 24"
                                                    class="nrgCamSS-left"
                                                    color="DarkGrey"
                                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamSSDdL">
                <u:Dropdown
                            id="idnrgCamSSDdL"
                            arrowcolor="Grey"
                            arrowType="Hollow"
                            enabled="true"
                            background="Transparent"
                            title="{SalesScriptData>/languageData/0/language}"
                            border="Bottom"
                            width="100px"
                            padding="5px"
                            DropdownListItems="{SalesScriptData>/languageData}">
                    <u:DropdownListItems>
                        <u:DropdownListItem key="{SalesScriptData>language}">
                            <c:Label text="{SalesScriptData>language}"/>
                        </u:DropdownListItem>
                    </u:DropdownListItems>
                </u:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamSSDscT">
                    <c:Label id="idCamSSMdLbl"
                        text="{comp-i18n>nrgCmpSSMdlbl}"
                        class="nrgCamSS-lbl nrgCamSS-top nrgCamSS-ManD"
                        labelFor="idCamSSMdTv" />
                    <u:TextView
                        id="idCamSSMdTv"
                        color="DarkGrey"
                        class="nrgCamSS-left nrgCamSS-top"
                        design="Base"
                        text="You have agreed to purchase:

                        A  thermostat for $94.99, and your final purchase price will be $
                        102.83 with tax.

                        This is a one-time purchase and has nothing to do with your electric
                        service or any other services that Reliant or its affiliates may
                        be providing you for which you make periodic payments. The credit card
                        you provided will be charged a one-time fee for this
                        purchase.

                        A restocking fee may apply for returned devices.

                        Your NRG thermostat is compatible with most HVAC systems. Check
                        compatibility at reliant.com/connectsupport. A limited one year
                        manufacturer's warranty is provided by Building36.

                        Mr/Ms. LAST NAME, I'd like to confirm that you are purchasing NRG
                        thermostat, is that correct?

                        Great! Thank you so much." />
            </u:Tag>
            <u:Tag class="nrgCamSSDisRn">
                <u:Dropdown
                            id="idnrgCamSSDisRn"
                            arrowcolor="Grey"
                            arrowType="Hollow"
                            enabled="true"
                            background="Transparent"
                            border="Bottom"
                            title="{SalesScriptData>/dispoistionData/0/Reason}"
                            width="300px"
                            padding="5px"
                            DropdownListItems="{SalesScriptData>/dispoistionData}">
                    <u:DropdownListItems>
                        <u:DropdownListItem key="{SalesScriptData>Reason}">
                            <c:Label text="{SalesScriptData>Reason}"/>
                        </u:DropdownListItem>
                    </u:DropdownListItems>
                </u:Dropdown>
            </u:Tag>
            <u:Tag class="nrgCamSSBtnT nrgCamSS-top" >
                <u:Button
                    id="idnrgCamSSBtn-Ok"
                    text="{comp-i18n>nrgCmpSSBtnOk}"
                    enabled="true"
                    class="nrgCamSSBtn">
                </u:Button>
                <u:Button
                    id="idnrgCamSSBtn-Dec"
                    text="{comp-i18n>nrgCmpSSBtnDec}"
                    enabled="true"
                    class="nrgCamSSBtn" >
                </u:Button>
            </u:Tag>
      </u:Tag>
   </u:Tag>
</mvc:View>
