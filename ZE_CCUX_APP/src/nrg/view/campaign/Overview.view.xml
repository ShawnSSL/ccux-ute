<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          controllerName="nrg.view.campaign.Overview"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamOvr">
         <u:Tag class="nrgCamOvr-title" text="OVERVIEW" />
         <u:content>
            <article class="nrgCamOvr-offerToolbar">
               <button type="button" class="nrgCamOvr-offerBtn">
                  <u:Tag class="nrgCamOvr-offerBtnTitle" text="{comp-i18n&gt;nrgAppFooterCustReqOffer}" />
                  <u:Tag id="idCamCustReqOffer" class="nrgCamOvr-offerBtnDesc nrgCamOvr-offerBtnTitle-ok" text="{comp-i18n&gt;nrgAppFooterEligibile}" />
               </button>
               <button type="button" class="nrgCamOvr-offerBtn">
                  <u:Tag class="nrgCamOvr-offerBtnTitle" text="{comp-i18n&gt;nrgAppFooterAgentReqOffer}" />
                  <u:Tag id="idCamAgentReqOffer" class="nrgCamOvr-offerBtnDesc" text="{comp-i18n&gt;nrgAppFooterNotEligibile}" />
               </button>
            </article>
            <u:ToggleButton
                    leftBtnText="{comp-i18n&gt;nrgCampaignCurrent}"
                    leftBtnWidth="400px"
                    rightBtnWidth="400px"
                    rightBtnText="{comp-i18n&gt;nrgCampaignPending}"
                    design="ToggleCampaign" press="testFunc" />
            <l:MatrixLayout class="nrgCamOvr-mtx">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell><c:Label text="Title" icon="sap-icon://nrg-icon/tag" class="nrgCamOvr-lbl" /></l:MatrixLayoutCell>
                    <l:MatrixLayoutCell><c:Label text="Customer Average Usage" icon="sap-icon://nrg-icon/bulb" class="nrgCamOvr-lbl" /></l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView text="CNP AVG@2000=11.3 Secure Advantage 24"
                                                    class="nrgCamOvr-left"
                                                    color="DarkGrey"
                                                    design="Base"/>
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <u:TextView text="~2300kWh per Month"
                                    class="nrgCamOvr-left"
                                    color="DarkGrey"
                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
           <c:Label text="Price" icon="sap-icon://nrg-icon/dollar" class="nrgCamOvr-lbl" />
            <u:Table width="60%"
                     tableType="CampaignTable"
                     class="nrgCamOvr-left"
                rows="{modelData>/priceData}" >
                <u:columns>
                    <u:TableColumn>
                        <c:Label text="EFL@500"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="EFL@1000"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="EFL@2000"/>
                    </u:TableColumn>
                </u:columns>
                <u:rows>
                    <u:TableRow>
                            <c:Label text="{modelData>EFL500}"/>
                            <c:Label text="{modelData>EFL1000}"/>
                            <c:Label text="{modelData>EFL2000}"/>
                    </u:TableRow>
                </u:rows>
            </u:Table>
            <c:Label text="Description" icon="sap-icon://nrg-icon/popup" class="nrgCamOvr-lbl" />
            <u:TextView
                        tooltip="Description"
                        color="DarkGrey"
                        class="nrgCamOvr-left"
                        design="Base"
                        text="You have agreed to purchase:

                 A  thermostat for $94.99, and your final purchase price will be $
                102.83 with tax.

                 This is a one-time purchase and has nothing to do with your electric
                service or any other services that Reliant or its affiliates may
                 be providing you for which you make periodic payments. The credit card
                you provided will be charged a one-time fee for this
                purchase.

                A restocking fee may apply for returned devices.

                 Your NRG thermostat is compatible with most HVAC systems. Check
                compatibility at reliant.com/connectsupport. A limited one year
                manufacturer's warranty is provided by Building36.

                 Mr/Ms. LAST NAME, I'd like to confirm that you are purchasing NRG
                thermostat, is that correct?

                Great! Thank you so much." />

            <u:Table width="100%"
                     tableType="CampaignTable"
                     rows="{modelData>/campaignData}" >
                <u:columns>
                    <u:TableColumn>
                        <c:Label text="Promo Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Offer Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Term Length"/>
                    </u:TableColumn>
                    <u:TableColumn>
                        <c:Label text="Start Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="End Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Cancellation Fee"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Incentive"/>
                    </u:TableColumn>
                </u:columns>
                <u:rows>
                    <u:TableRow>
                            <c:Label text="{modelData>PromoCode}"/>
                            <c:Label text="{modelData>OfferCode}"/>
                            <c:Label text="{modelData>TermLength}"/>
                            <c:Label text="{modelData>StartDate}"/>
                            <c:Label text="{modelData>EndDate}"/>
                            <c:Label text="{modelData>CancellationFee}"/>
                            <c:Label text="{modelData>Incentive}"/>
                    </u:TableRow>
                </u:rows>
            </u:Table>
         </u:content>
      </u:Tag>
   </u:Tag>
</mvc:View>
