<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:l="sap.ui.commons.layout"
          xmlns:m="sap.m"
          xmlns:um="ute.ui.main"
          controllerName="nrg.view.campaign.History"
          height="100%"
          width="100%"
          displayBlock="true">
   <u:Tag class="nrgAppMain-generalContent nrgAppMain-generalContent-full">
      <u:Tag class="nrgCamHisT">
            <l:MatrixLayout class="nrgCamHisMtx nrgCamHis-top">
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:Label id="idCamHisTtlLbl" text="{comp-i18n>nrgCmpHisTtllbl}" icon="sap-icon://nrg-icon/tag" class="nrgCamHis-lbl"  labelFor="idCamHisTtlTv"  />
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <u:TextView id="idCamHisTtlTv" text="{comp-campaign>OfferTitle}"
                                                    class="nrgCamHis-left"
                                                    color="DarkGrey"
                                                    design="Base"/>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:MatrixLayout>
            <u:Tag class="nrgCamHisPrcT">
                <c:Label id="idCamPrcLbl" text="{comp-i18n>nrgCmpHisPrcbl}" icon="sap-icon://nrg-icon/dollar" class="nrgCamHis-lbl nrgCamHis-top" labelFor="idCamHisPrcTbl"  />
                <u:Table width="60%"
                    id="idCamHisPrcTbl"
                    tableType="CampaignTable"
                    class="nrgCamHis-left nrgCamHis-top"
                    >
                        <u:columns>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@500"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@1000"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@2000"/>
                            </u:TableColumn>
                        </u:columns>
                        <u:rows>
                            <u:TableRow>
                                <c:Label text="{comp-campaign>EFL500}"/>
                                <c:Label text="{comp-campaign>EFL1000}"/>
                                <c:Label text="{comp-campaign>EFL2000}"/>
                            </u:TableRow>
                        </u:rows>
                </u:Table>
            </u:Tag>
            <u:Tag class="nrgCamHisDscT">
                    <c:Label id="idCamHisDscLbl"
                        text="{comp-i18n>nrgCmpHisDscbl}"
                        icon="sap-icon://nrg-icon/description"
                        class="nrgCamHis-lbl nrgCamHis-top nrgCamHis-desc"
                        labelFor="idCamDescTv" />
                    <u:TextView
                        id="idCamHisDscTv"
                        color="DarkGrey"
                        class="nrgCamHis-left nrgCamHis-top"
                        design="Base"
                        text="{comp-campaign>Description}" />
            </u:Tag>
            <u:Table width="100%"
                     id="idCamHisInfTbl"
                     class="nrgCamHis-top"
                     tableType="CampaignTable"
                     >
                <u:columns>
                    <u:TableColumn>
                        <c:Label text="Promo Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Offer Code"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Term Length"/>
                    </u:TableColumn>
                    <u:TableColumn>
                        <c:Label text="Start Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="End Date"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Cancellation Fee"/>
                    </u:TableColumn>
                    <u:TableColumn>
                         <c:Label text="Incentive"/>
                    </u:TableColumn>
                </u:columns>
                <u:rows>
                    <u:TableRow>
                        <c:Label text="{comp-campaign>PromoCode}"/>
                        <c:Label text="{comp-campaign>OfferCode}"/>
                        <c:Label text="{comp-campaign>TermLength}"/>
                        <c:Label text="{path: 'comp-campaign>StartDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{path: 'comp-campaign>EndDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{comp-campaign>CancellationFee}"/>
                        <c:Label text="{comp-campaign>Incentive}"/>
                    </u:TableRow>
                </u:rows>
            </u:Table>
                <u:Table width="60%"
                    id="idCamHisPrcTbl2"
                    tableType="CampaignTable"
                    class="nrgCamHis-left nrgCamHis-top"
                    rows="{comp-campaign>/CpgHistS}">
                        <u:columns>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@500"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@1000"/>
                            </u:TableColumn>
                            <u:TableColumn width="33%" >
                                <c:Label text="EFL@2000"/>
                            </u:TableColumn>
                        </u:columns>
                        <u:rows>
                            <u:TableRow>
                                <c:Label text="{comp-campaign>EFL500}"/>
                                <c:Label text="{comp-campaign>EFL1000}"/>
                                <c:Label text="{comp-campaign>EFL2000}"/>
                            </u:TableRow>
                        </u:rows>
                </u:Table>
      </u:Tag>
   </u:Tag>
</mvc:View>
