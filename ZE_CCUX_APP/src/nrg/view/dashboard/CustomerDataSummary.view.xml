                <ute:Tag elem="span"
                    id="db_verify_CA"
                    text="00000000">
                </ute:Tag>
            </ute:Tag>

            <ute:HorizontalDivider class="nrgDashboard-cusDataSum-horiLine"/>

            <l:MatrixLayout widths="20%,80%" columns="2" width="100%">
                <l:rows>
                    <l:MatrixLayoutRow>
                        <l:cells>
                            <l:MatrixLayoutCell>
                                <core:Icon src="sap-icon://nrg-icon/weather-cloud"/>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <ute:TextView text="Houston, TX"/>
                                <ute:TextView text="72 F"/>
                            </l:MatrixLayoutCell>
                        </l:cells>
                    </l:MatrixLayoutRow>
                </l:rows>
            </l:MatrixLayout>

            <ute:HorizontalDivider class="nrgDashboard-cusDataSum-horiLine"/>

            <ute:Tag class="nrgDashboard-cusDataSum-bpCaArea">
                <ute:TextView
                    text="CA Name">
                </ute:TextView>
                <ute:TextView
                    text="#$^#$#$^#$">
                </ute:TextView>
            </ute:Tag>


            <ute:HorizontalDivider class="nrgDashboard-cusDataSum-horiLine"/>

            <ute:Tag class="nrgDashboard-cusDataSum-bpCaArea">
                <utmain:Label
                    text="Customer Segmentation:"
                    labelFor="cs_seg">
                </utmain:Label>
                <ute:Tag elem="span"
                    id="cs_seg"
                    text="Priority One">
                </ute:Tag>
            </ute:Tag>

            <utmain:Button
                design="None"
                text="Assigned Account"
                class="nrgCallerNoIDEnrollment-ListItemLink">
            </utmain:Button>

