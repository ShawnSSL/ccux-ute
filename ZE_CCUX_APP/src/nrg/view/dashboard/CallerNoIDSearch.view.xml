<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.commons.layout"
    xmlns:c="sap.ui.commons"
    controllerName="nrg.view.dashboard.CallerNoIDSearch">


    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-calrNoIDSearch">
        <ute:content>
            <ute:Tag class="nrgDashboard-calrNoIDSearch-title"
                     text="{comp-i18n>nrgDashboardCallerNoIDSearchTitle}">
            </ute:Tag>
            <ute:Tag class="nrgDashboard-calrNoIDSearch-textfield">
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_CaNumPh}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_Ssn}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_Dl}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
            </ute:Tag>
            <ute:Tag class="nrgDashboard-calrNoIDSearch-textfield">
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_CaName}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_BpNum}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_FedTaxId}"
                    change="ESID"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_Esid}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
            </ute:Tag>
            <ute:Tag class="nrgCallerNoIDSearch-sbtn">
                <ute:Button
                    text="Search"
                    enabled="true">
                </ute:Button>
            </ute:Tag>
        </ute:content>
    </ute:Tag>
    <ute:Tag class="nrgDashboard-calrNoIDSearch nrgDashboard-calrNoIDSearch-transSpace">

    </ute:Tag>
    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-calrNoIDSearch">
        <ute:Tag class="nrgDashboard-calrNoIDSearch-resultTitle"
                 text="{comp-i18n>nrgDashboardCallerNoIDSearchResultTitle}">
        </ute:Tag>

        <ute:Tag>
        <l:MatrixLayout
            width="100%"
            columns="3"
            rows="{comp-dashboard>/BpSearchs}">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:MatrixLayoutCell>
                        <c:TextView text="{comp-dashboard>PartnerID}"></c:TextView>
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <c:TextView text="{comp-dashboard>DL}"></c:TextView>
                    </l:MatrixLayoutCell>
                    <l:MatrixLayoutCell>
                        <c:TextView text="{comp-dashboard>TaxID}"></c:TextView>
                    </l:MatrixLayoutCell>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
        </ute:Tag>

        <ute:Tag
            text="{comp-dashboard>/BpSearchs('PartnerID 1')/ESID}">
        </ute:Tag>
    </ute:Tag>

</mvc:View>
