<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.commons.layout"
    xmlns:c="sap.ui.commons"
    controllerName="nrg.view.dashboard.CallerNoIDSearch"
    displayBlock="true">


    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-calrNoIDSearch">
        <ute:content>
            <ute:Tag class="nrgDashboard-calrNoIDSearch-title"
                     text="{comp-i18n>nrgDashboardCallerNoIDSearchTitle}">
            </ute:Tag>
            <ute:Tag class="nrgDashboard-calrNoIDSearch-textfield">
                <ute:Textfield
                    id="textFieldCa"
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_CaNumPh}"
                    change="onTextFieldChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    id="text_field_SSN"
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_Ssn}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_Dl}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
            </ute:Tag>
            <ute:Tag class="nrgDashboard-calrNoIDSearch-textfield">
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_CaName}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_BpNum}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_FedTaxId}"
                    change="ESID"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    class="nrgDashboard-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n>nrgDashboardClrNid_Esid}"
                    change="testInputChange"
                    label="Title"
                    width="48%">
                </ute:Textfield>
            </ute:Tag>
            <ute:Tag class="nrgCallerNoIDSearch-sbtn">
                <ute:Button
                    press="onSearch"
                    text="Search"
                    enabled="true">
                </ute:Button>
            </ute:Tag>
        </ute:content>
    </ute:Tag>
    <ute:Tag class="nrgDashboard-calrNoIDSearch nrgDashboard-calrNoIDSearch-transSpace">

    </ute:Tag>
    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-calrNoIDSearch">
        <ute:Tag class="nrgDashboard-calrNoIDSearch-resultTitle"
                 text="{comp-i18n>nrgDashboardCallerNoIDSearchResultTitle}">
        </ute:Tag>

        <ute:Tag class="nrgDashboard-calrNoIDSearch-resultTitle"
                 text="{oBpSearchResult>/BpSearchs('1121')/PartnerID}">
        </ute:Tag>

        <ute:Tag class="nrgDashboard-calrNoIDSearch-resultTable">
        <ute:ScrollContainer
            height="180px"
            width="100%"
            horizontal="false"
            vertical="true">
            <l:MatrixLayout
                width="100%"
                columns="8"
                widths="2%,18%,10%,24%,13%,13%,10%,10%"
                rows="{oBpSearchResult>/}">
                <l:rows>
                    <l:MatrixLayoutRow>
                        <l:MatrixLayoutCell>
                            <c:TextView text="1)"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView
                                text="{oBpSearchResult>FirstName} {oBpSearchResult>LastName}">
                            </c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="{oBpSearchResult>PartnerID}"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView
                                text="{oBpSearchResult>HouseNumber} {oBpSearchResult>Street}">
                            </c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="{oBpSearchResult>UnitNumber}"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView
                                text="{oBpSearchResult>City} {oBpSearchResult>State}">
                            </c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="{oBpSearchResult>ZipCode}"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <ute:Button
                                buttonType="GeneralInfo"
                                text="Select"
                                enabled="true">
                        </ute:Button>
                        </l:MatrixLayoutCell>

                    </l:MatrixLayoutRow>
                </l:rows>
            </l:MatrixLayout>
        </ute:ScrollContainer>
        </ute:Tag>

    </ute:Tag>

</mvc:View>
