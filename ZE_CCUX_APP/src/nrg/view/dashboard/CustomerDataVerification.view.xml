<!--Routing Pattern: customerDataVerification/bp/{bpNum}-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    controllerName="nrg.view.dashboard.CallerNoIDEnrollment">

    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-cusDataVerify">
        <l:MatrixLayout
            class="nrgDashboard-cusDataVerify-layout"
            widths="288px,534px,84px" columns="3" width="100%">
            <l:rows>
                <l:MatrixLayoutRow>
                    <l:cells>
                        <!--Area Left (active)-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataVerify-l">
                            <ute:Tag class="nrgDashboard-cusDataVerify-l-div">
                                <ute:TextView text="ACTIVE"
                                    class="nrgDashboard-cusDataVerify-l-div-title"/>

                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataVerify-horDvi"/>

                                <utmain:Label text="TDSP" labelFor="tdsp"
                                    class="nrgDashboard-cusDataVerify-l-div-tdspLabl"/>
                                <ute:TextView id="tdsp" text="CENTERPOINT ENERGY"
                                    class="nrgDashboard-cusDataVerify-l-div-tdspVal"/>

                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataVerify-horDvi"/>

                                <l:MatrixLayout widths="50%,50%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell
                                            class="nrgDashboard-cusDataVerify-l-div-cell">
                                            <utmain:Label text="METER. #"
                                                labelFor="meter"
                                                class="nrgDashboard-cusDataVerify-l-div-halflabl"/>
                                            <ute:TextView id="meter"
                                                text="123235457"
                                                class="nrgDashboard-cusDataVerify-l-div-halgVal"/>
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell
                                            class="nrgDashboard-cusDataVerify-l-div-cell">
                                            <utmain:Label text="DESCRIPTION"
                                                labelFor="desp"
                                                class="nrgDashboard-cusDataVerify-l-div-ritelabl"/>
                                            <ute:TextView id="desp"
                                                text="Non interval"
                                                class="nrgDashboard-cusDataVerify-l-div-halgVal"/>
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>

                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataVerify-horDvi"/>

                                <l:MatrixLayout widths="50%,50%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell
                                            class="nrgDashboard-cusDataVerify-l-div-cell">
                                            <utmain:Label text="CONTRACT ACC"
                                                labelFor="contacc"
                                                class="nrgDashboard-cusDataVerify-l-div-halflabl"/>
                                            <ute:TextView id="contacc"
                                                text="0000000"
                                                class="nrgDashboard-cusDataVerify-l-div-halgVal"/>
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell
                                            class="nrgDashboard-cusDataVerify-l-div-cell">
                                            <utmain:Label text="RATE CLASS"
                                                labelFor="rtcls"
                                                class="nrgDashboard-cusDataVerify-l-div-ritelabl"/>
                                            <ute:TextView id="rtcls"
                                                text="RES"
                                                class="nrgDashboard-cusDataVerify-l-div-halgVal"/>
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>

                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataVerify-horDvi"/>

                                <utmain:Label text="ESID" labelFor="esid"
                                    class="nrgDashboard-cusDataVerify-l-div-esidLabl"/>
                                <ute:TextView id="esid"
                                              class="nrgDashboard-cusDataVerify-l-div-tdspVal"
                                              text="1234567891234567891234"/>

                                <ute:HorizontalDivider
                                    class="nrgDashboard-cusDataVerify-horDvi"/>

                                <l:MatrixLayout widths="50%,50%" columns="2">
                                    <l:MatrixLayoutRow>
                                        <l:MatrixLayoutCell
                                            class="nrgDashboard-cusDataVerify-l-div-cell">
                                            <utmain:Label text="DL #" labelFor="dl"
                                                class="nrgDashboard-cusDataVerify-l-div-ritelabl"/>
                                            <ute:TextView id="dl" text="0000000000"
                                                class="nrgDashboard-cusDataVerify-l-div-halgVal"/>
                                        </l:MatrixLayoutCell>
                                        <l:MatrixLayoutCell
                                            class="nrgDashboard-cusDataVerify-l-div-cell">
                                            <utmain:Label text="SS #" labelFor="ssn"
                                                class="nrgDashboard-cusDataVerify-l-div-ritelabl"/>
                                            <ute:TextView id="ssn" text="*****1234"
                                                class="nrgDashboard-cusDataVerify-l-div-halgVal"/>
                                        </l:MatrixLayoutCell>
                                    </l:MatrixLayoutRow>
                                </l:MatrixLayout>
                            </ute:Tag>
                        </l:MatrixLayoutCell>
                        <!--Area Left Ends-->
                        <!--Area Middle (service address/mailing address)-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataVerify-m">
                            <ute:ToggleButton
                                leftBtnText="SERVICE ADDRESS"
                                rightBtnText="MAILING ADDRESS"
                                desgin="ToggleDashboard"
                                press="onTogglePressed">
                            </ute:ToggleButton>
                            <ute:Tag class="nrgDashboard-cusDataVerify-mContact">
                            </ute:Tag>
                        </l:MatrixLayoutCell>
                        <!--Area Middle Ends-->
                        <!--Area Right (Only 2 buttons )-->
                        <l:MatrixLayoutCell class="nrgDashboard-cusDataVerify-r">
                            <ute:TextView text="area3"/>
                        </l:MatrixLayoutCell>
                    </l:cells>
                </l:MatrixLayoutRow>
            </l:rows>
        </l:MatrixLayout>
    </ute:Tag>
</mvc:View>
